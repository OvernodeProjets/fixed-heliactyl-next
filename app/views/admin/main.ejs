<script>
function switchTab(tabName) {
  // Hide all tab contents 
  const contents = document.querySelectorAll('.tab-content');
  contents.forEach(content => content.classList.add('hidden'));

  // Remove active state from all buttons
  const buttons = document.querySelectorAll('.tab-button');
  buttons.forEach(button => {
    button.classList.remove('bg-white/10', 'text-white');
    button.classList.add('bg-white/5', 'text-gray-300');
  });

  // Show selected tab content
  document.getElementById('content-' + tabName)?.classList.remove('hidden');

  // Add active state to selected button
  const activeButton = document.getElementById('tab-' + tabName);
  if (activeButton) {
    activeButton.classList.remove('bg-white/5', 'text-gray-300');
    activeButton.classList.add('bg-white/10', 'text-white');
  }

  // Load VPS data if VPS tab is selected
  <% if (proxmoxEnabled) { %>
  if (tabName === 'vps') {
    if (typeof loadNodes === 'function') loadNodes();
    if (typeof loadVMList === 'function') loadVMList();
  }
  <% } %>
}
</script>

<script>
// Function to handle form submissions
function handleFormSubmit(event) {
    event.preventDefault();
    const form = event.target;
    const url = form.action;
    const formData = new URLSearchParams(new FormData(form));

    fetch(url + '?' + formData.toString())
        .then(response => response.json())
        .then(data => {
            showToast('success', data.message);
            form.reset();
        })
        .catch(error => {
            showToast('error', 'An error occurred: ' + error);
        });
}

// Add submit event listeners to all forms except userinfo
document.querySelectorAll('form:not(.userinfo-form)').forEach(form => {
    form.addEventListener('submit', handleFormSubmit);
});

function handleGetAlts() {
  const userId = document.getElementById("alts-userid").value.trim();

  if (!userId) {
    showToast("error", "Please enter a user ID.");
    return;
  }

  const url = "/api/admin/alts/" + encodeURIComponent(userId);
  const resultContainer = document.getElementById("alts-result");
  const dataContainer = document.getElementById("alts-data");

  fetch(url)
    .then(response => response.json())
    .then(data => {
      if (data.error) throw new Error(data.error);

      const formattedData = {
        "User ID": data.userId,
        "IP Address": data.ip,
        "Alternate Accounts": data.alts.length > 0 ? data.alts : "No alts found"
      };

      resultContainer.classList.remove("hidden");
      dataContainer.textContent = JSON.stringify(formattedData, null, 2);
      dataContainer.classList.remove("text-red-500");
      dataContainer.classList.add("text-gray-300");
    })
    .catch(error => {
      resultContainer.classList.remove("hidden");
      dataContainer.textContent = "Error: " + error.message;
      dataContainer.classList.remove("text-gray-300");
      dataContainer.classList.add("text-red-500");
    });
}

function handleUserInfoSubmit() {
  const input = document.getElementById("userinfo-id").value.trim();

  if (!input) {
    showToast("error", "Please enter a user ID or email.");
    return;
  }

  const isEmail = input.includes("@");
  const paramName = isEmail ? "email" : "id";

  const url = "/api/admin/userinfo" + `?${paramName}=` + encodeURIComponent(input);

  const resultContainer = document.getElementById("userinfo-result");
  const dataContainer = document.getElementById("userinfo-data");

  fetch(url)
    .then(response => response.json())
    .then(data => {
      if (data.error) throw new Error(data.error);

      // Count notifications
      const notificationsCount = data.notifications ? Object.keys(data.notifications).length : 0;

      // Format the data for display
      const formattedData = {
        "Package Info": data.package,
        "Extra Resources": data.extra,
        "User Details": data.userinfo ? {
          "Username": data.userinfo.attributes?.username || 'N/A',
          "Email": data.userinfo.attributes?.email || 'N/A',
          "Admin": data.userinfo.attributes?.root_admin ? "Yes" : "No",
          "Id": data.id || 'N/A'
        } : 'User not found',
        "Coins": data.coins,
        "Ban Status": data.banned ? "BANNED" : "ACTIVE",
        "Ban Details": data.banStatus ? {
          "Reason": data.banStatus.reason,
          "Banned At": data.banStatus.bannedAt,
          "Expiration": data.banStatus.expiration || "Permanent",
          "Banned By": data.banStatus.bannedBy
        } : "No ban active",
        "Ban History": data.banHistory && data.banHistory.length > 0 ? `${data.banHistory.length} ban(s) - Click to expand` : "No ban history",
        "Notifications": `${notificationsCount} notification(s) - Click to expand`
      };

      // Show the result container
      resultContainer.classList.remove("hidden");

      // Display the formatted data
      dataContainer.textContent = JSON.stringify(formattedData, null, 2);
      dataContainer.classList.remove("text-red-500");
      dataContainer.classList.add("text-gray-300");
      
      // Store full notifications data for toggle
      dataContainer.dataset.notifications = JSON.stringify(data.notifications);
      dataContainer.dataset.banHistory = JSON.stringify(data.banHistory);
      dataContainer.dataset.expanded = 'false';
      dataContainer.style.cursor = 'pointer';
      
      // Add click handler to toggle notifications
      dataContainer.onclick = function() {
        const isExpanded = this.dataset.expanded === 'true';
        const notifications = JSON.parse(this.dataset.notifications);
        const banHistory = JSON.parse(this.dataset.banHistory);
        
        if (isExpanded) {
          // Collapse back to summary
          const summaryData = {
            "Package Info": data.package,
            "Extra Resources": data.extra,
            "User Details": data.userinfo ? {
              "Username": data.userinfo.attributes?.username || 'N/A',
              "Email": data.userinfo.attributes?.email || 'N/A',
              "Admin": data.userinfo.attributes?.root_admin ? "Yes" : "No",
              "Id": data.id || 'N/A'
            } : 'User not found',
            "Coins": data.coins,
            "Ban Status": data.banned ? "BANNED" : "ACTIVE",
            "Ban Details": data.banStatus ? {
              "Reason": data.banStatus.reason,
              "Banned At": data.banStatus.bannedAt,
              "Expiration": data.banStatus.expiration || "Permanent",
              "Banned By": data.banStatus.bannedBy
            } : "No ban active",
            "Ban History": banHistory && banHistory.length > 0 ? `${banHistory.length} ban(s) - Click to expand` : "No ban history",
            "Notifications": `${notificationsCount} notification(s) - Click to expand`
          };
          this.textContent = JSON.stringify(summaryData, null, 2);
          this.dataset.expanded = 'false';
        } else {
          // Expand to show all notifications and ban history
          const fullData = {
            "Package Info": data.package,
            "Extra Resources": data.extra,
            "User Details": data.userinfo ? {
              "Username": data.userinfo.attributes?.username || 'N/A',
              "Email": data.userinfo.attributes?.email || 'N/A',
              "Admin": data.userinfo.attributes?.root_admin ? "Yes" : "No",
              "Id": data.id || 'N/A'
            } : 'User not found',
            "Coins": data.coins,
            "Ban Status": data.banned ? "BANNED" : "ACTIVE",
            "Ban Details": data.banStatus ? {
              "Reason": data.banStatus.reason,
              "Banned At": data.banStatus.bannedAt,
              "Expiration": data.banStatus.expiration || "Permanent",
              "Banned By": data.banStatus.bannedBy
            } : "No ban active",
            "Ban History": banHistory,
            "Notifications": notifications
          };
          this.textContent = JSON.stringify(fullData, null, 2);
          this.dataset.expanded = 'true';
        }
      };
    })
    .catch(error => {
      resultContainer.classList.remove("hidden");
      dataContainer.textContent = "Error: " + error.message;
      dataContainer.classList.remove("text-gray-300");
      dataContainer.classList.add("text-red-500");
      dataContainer.onclick = null;
    });
}

