async function verifyVM() {
  const vmId = document.getElementById('vm-id').value;
  const node = document.getElementById('vm-node').value;
  const resultDiv = document.getElementById('vm-verify-result');

  if (!vmId || !node) {
    showToast('error', '<%= __('vps.admin.verify_vm_error_fields') %>');
    return;
  }

  try {
    resultDiv.classList.remove('hidden');
    resultDiv.innerHTML = '<p class="text-gray-400"><%= __('vps.admin.verifying') %></p>';

    const response = await fetch(`/api/admin/vps/verify?vmId=${vmId}&node=${node}`);
    const data = await response.json();

    if (data.exists && data.available) {
      resultDiv.innerHTML = `<div class="p-3 bg-emerald-500/20 border border-emerald-500/50 rounded-lg">
        <p class="text-emerald-300 text-sm"><%= __('vps.admin.verify_success') %>: ${data.name || 'VM ' + vmId}</p>
      </div>`;
    } else {
      resultDiv.innerHTML = `<div class="p-3 bg-red-500/20 border border-red-500/50 rounded-lg">
        <p class="text-red-300 text-sm">${data.message}</p>
      </div>`;
    }
  } catch (error) {
    resultDiv.innerHTML = `<div class="p-3 bg-red-500/20 border border-red-500/50 rounded-lg">
      <p class="text-red-300 text-sm"><%= __('vps.admin.verify_error') %>: ${error.message}</p>
    </div>`;
  }
}

async function handleAddVM(event) {
  event.preventDefault();
  const formData = new FormData(event.target);
  const data = {
    userId: formData.get('userId'),
    node: formData.get('node'),
    vmId: formData.get('vmId'),
    expirationDate: formData.get('expirationDate')
  };

  try {
    const response = await fetch('/api/admin/vps/add', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify(data)
    });

    const result = await response.json();

    if (response.ok) {
      showToast('success', result.message || '<%= __('vps.admin.vm_added_success') %>');
      event.target.reset();
      document.getElementById('vm-verify-result').classList.add('hidden');
      loadVMList();
    } else {
      showToast('error', result.error || '<%= __('vps.admin.vm_add_error') %>');
    }
  } catch (error) {
    showToast('error', '<%= __('vps.admin.vm_add_error') %>: ' + error.message);
  }
}

async function loadVMList() {
  const container = document.getElementById('vm-list-container');
  try {
    const response = await fetch('/api/admin/vps/list');
    const data = await response.json();

    if (data.data.length === 0) {
      container.innerHTML = '<p class="text-gray-400 text-sm"><%= __('vps.admin.no_vms') %></p>';
      return;
    }

    container.innerHTML = data.data.map(vm => {
      const expirationDate = new Date(vm.expirationDate);
      const now = new Date();
      const isExpired = expirationDate < now;
      const expirationText = isExpired ? '<span class="text-red-400"><%= __('vps.admin.expired') %></span>' : expirationDate.toLocaleDateString();

      return `
        <div class="p-4 bg-white/5 rounded-lg border border-white/10">
          <div class="flex justify-between items-start">
            <div class="flex-1">
              <h3 class="text-white font-medium">${vm.name || 'VM ' + vm.vmId}</h3>
              <p class="text-gray-400 text-sm mt-1">
                <span><%= __('vps.admin.vm_id') %>: ${vm.vmId}</span> | 
                <span><%= __('vps.admin.user_id') %>: ${vm.userId}</span> | 
                <span><%= __('vps.admin.node') %>: ${vm.node}</span>
              </p>
              <p class="text-gray-400 text-sm mt-1">
                <span>IP: ${vm.ip || 'Auto (Cloud-Init)'}</span> | 
                <span><%= __('vps.admin.expiration') %>: ${expirationText}</span>
              </p>
            </div>
            <div class="flex gap-2 ml-4">
              <button onclick="editVM(${vm.vmId}, ${vm.userId}, '${vm.expirationDate}', '${vm.node}')" class="px-3 py-1.5 bg-indigo-500/20 hover:bg-indigo-500/30 text-indigo-300 rounded-lg text-sm transition">
                <%= __('vps.admin.edit') %>
              </button>
              <button onclick="deleteVM(${vm.vmId})" class="px-3 py-1.5 bg-red-500/20 hover:bg-red-500/30 text-red-300 rounded-lg text-sm transition">
                <%= __('common.delete') %>
              </button>
            </div>
          </div>
        </div>
      `;
    }).join('');
  } catch (error) {
    container.innerHTML = `<p class="text-red-400 text-sm"><%= __('vps.admin.load_error') %>: ${error.message}</p>`;
  }
}

async function deleteVM(vmId) {
  if (!confirm('<%= __('vps.admin.delete_confirm') %>')) {
    return;
  }

  try {
    const response = await fetch(`/api/admin/vps/${vmId}`, {
      method: 'DELETE'
    });

    const result = await response.json();

    if (response.ok) {
      showToast('success', result.message || '<%= __('vps.admin.vm_deleted_success') %>');
      loadVMList();
    } else {
      showToast('error', result.error || '<%= __('vps.admin.vm_delete_error') %>');
    }
  } catch (error) {
    showToast('error', '<%= __('vps.admin.vm_delete_error') %>: ' + error.message);
  }
}

function editVM(vmId, userId, expirationDate, node) {
  document.getElementById('edit-vm-id').value = vmId;
  document.getElementById('edit-vm-user-id').value = userId;

  // Convert ISO date to datetime-local format
  const date = new Date(expirationDate);
  const localDate = new Date(date.getTime() - date.getTimezoneOffset() * 60000);
  document.getElementById('edit-vm-expiration').value = localDate.toISOString().slice(0, 16);

  document.getElementById('edit-vm-modal').classList.remove('hidden');
  document.getElementById('edit-vm-modal').classList.add('flex');
}

function closeEditModal() {
  document.getElementById('edit-vm-modal').classList.add('hidden');
  document.getElementById('edit-vm-modal').classList.remove('flex');
  document.getElementById('edit-vm-form').reset();
}

async function handleEditVM(event) {
  event.preventDefault();
  const form = event.target;
  const formData = new FormData(form);
  const vmId = formData.get('vmId');

  const data = {
    userId: formData.get('userId'),
    expirationDate: formData.get('expirationDate')
  };

  try {
    const response = await fetch(`/api/admin/vps/${vmId}`, {
      method: 'PUT',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify(data)
    });

    const result = await response.json();

    if (response.ok) {
      showToast('success', result.message || '<%= __('vps.admin.vm_updated_success') %>');
      closeEditModal();
      loadVMList();
    } else {
      showToast('error', result.error || '<%= __('vps.admin.vm_update_error') %>');
    }
  } catch (error) {
    showToast('error', '<%= __('vps.admin.vm_update_error') %>: ' + error.message);
  }
}
<% } %>
</script>
