<%- include('../components/top') %>
<style>
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.3s ease, visibility 0.3s ease;
    }
    .modal-content {
        background-color: #1a1c20;
        padding: 2rem;
        border-radius: 0.5rem;
        overflow: auto;
        transform: scale(0.9);
        opacity: 0;
        transition: transform 0.3s ease, opacity 0.3s ease;
    }
    .modal-overlay.active {
        opacity: 1;
        visibility: visible;
    }
    .modal-overlay.active .modal-content {
        transform: scale(1);
        opacity: 1;
    }
    .loader {
        border: 3px solid #f3f3f3;
        border-top: 3px solid #f97316;
        border-radius: 50%;
        width: 24px;
        height: 24px;
        animation: spin 1s linear infinite;
        display: inline-block;
        vertical-align: middle;
        margin-right: 8px;
    }
    @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }
    .backup-list-item {
        display: flex;
        align-items: center;
        padding: 0.75rem;
        border-radius: 0.375rem;
        cursor: pointer;
    }
</style>
<main class="flex-grow container mx-auto px-4 py-8">
    <%- include('../components/server_header', {
        backButtonText: 'Back to server list'
    }) %>      
<div id="alert-container" class="mb-4 space-y-2"></div>
    <%- include('../components/server') %>

    <div class="bg-white/5 rounded-xl p-6 mb-6">
        <div class="flex flex-col md:flex-row gap-y-3  justify-between items-center mb-4">
            <div>
                <h2 class="text-xl font-semibold text-white"><%= __('website.backups.title') %></h2>
                <p class="text-gray-400 text-sm mt-1"><%= __('website.backups.subtitle') %></p>
            </div>
            <button id="create-backup" class="bg-indigo-500 hover:bg-indigo-700 text-white font-medium py-1.5 px-4 rounded-full hover:scale-95 transition"><%= __('server.backups.create') %></button>
        </div>
        <div id="backup-list" class="space-y-2">
            <!-- Backup list will be populated here -->
        </div>
    </div>
</main>

<!-- Confirm Delete Modal -->
<div id="confirm-delete-modal" class="modal-overlay z-50">
    <div class="modal-content w-[75%] md:w-[50%]">
        <h3 class="text-xl font-semibold mb-4"><%= __('server.backups.confirm_delete_title') %></h3>
        <p class="mb-4"><%= __('server.backups.confirm_delete_text') %></p>
        <div class="flex justify-end">
            <button id="cancel-delete" class="bg-neutral-600 hover:bg-neutral-700 text-white font-medium py-2 px-4 rounded-lg transition mr-2"><%= __('server.backups.cancel') %></button>
            <button id="confirm-delete" class="bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-lg transition"><%= __('server.backups.delete') %></button>
        </div>
    </div>
</div>

<script>
    const serverId = new URLSearchParams(window.location.search).get('id');
    let backupToDelete = null;
    const t = {
        inProgress: <%- JSON.stringify(__('server.backups.in_progress')) %>,
        download: <%- JSON.stringify(__('server.backups.download')) %>,
        delete: <%- JSON.stringify(__('server.backups.delete')) %>,
        failedToLoad: <%- JSON.stringify(__('server.backups.failed_to_load')) %>,
        pleaseRefresh: <%- JSON.stringify(__('server.backups.please_refresh')) %>,
        creatingLabel: <%- JSON.stringify(__('server.backups.creating_label')) %>,
        createStarted: <%- JSON.stringify(__('server.backups.create_started')) %>,
        createLimit: <%- JSON.stringify(__('server.backups.create_limit')) %>,
        createError: <%- JSON.stringify(__('server.backups.create_error')) %>,
        downloadError: <%- JSON.stringify(__('server.backups.download_error')) %>,
        deleteError: <%- JSON.stringify(__('server.backups.delete_error')) %>,
        noDescription: <%- JSON.stringify(__('server.backups.no_description')) %>
    };

    function showLoader(elementId) {
        const element = document.getElementById(elementId);
        element.innerHTML = `<svg class="animate-spin h-8 w-8 text-white mx-auto" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>`;
    }

    function hideLoader(elementId) {
        const element = document.getElementById(elementId);
        element.innerHTML = '';
    }

    function loadBackupList() {
        showLoader('backup-list');
        fetch(`/api/server/${serverId}/backups`)
            .then(response => response.json())
            .then(data => {
                const backupList = document.getElementById('backup-list');
                const createBackupBtn = document.getElementById('create-backup');
                backupList.innerHTML = '';
                
                // Check if user has backup slots - if backup_count is 0 and no backups, they have no slots
                // We need to check the server limits to know the actual limit
                const backupCount = data.meta?.backup_count || 0;
                
                // Hide create button if no backup slots allocated (backup_count is 0 and no existing backups)
                // This assumes if they have 0 backup_count and 0 backups, they don't have backup feature
                fetch(`/api/server/${serverId}`)
                    .then(res => res.json())
                    .then(serverData => {
                        const backupLimit = serverData.attributes?.feature_limits?.backups || 0;
                        if (backupLimit === 0) {
                            createBackupBtn.style.display = 'none';
                            // Show no backup slots message
                            backupList.innerHTML = `
                                <div class="text-center py-8">
                                    <div class="w-16 h-16 mx-auto mb-4 bg-red-900/50 rounded-full flex items-center justify-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10 text-red-300">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M18.364 18.364A9 9 0 0 0 5.636 5.636m12.728 12.728A9 9 0 0 1 5.636 5.636m12.728 12.728L5.636 5.636" />
                                        </svg>
                                    </div>
                                    <h3 class="text-lg font-medium text-white mb-2">No Backup Slots</h3>
                                    <p class="text-red-200/60">This server does not have any backup slots allocated.</p>
                                </div>
                            `;
                        } else {
                            createBackupBtn.style.display = '';
                        }
                    })
                    .catch(() => {
                        // On error, still show the button
                        createBackupBtn.style.display = '';
                    });
                
                if (!data.data || data.data.length === 0) {
                    backupList.innerHTML = `
                        <div class="text-center py-8">
                            <div class="w-16 h-16 mx-auto mb-4 bg-indigo-900/50 rounded-full flex items-center justify-center">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10 text-indigo-300">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="m20.25 7.5-.625 10.632a2.25 2.25 0 0 1-2.247 2.118H6.622a2.25 2.25 0 0 1-2.247-2.118L3.75 7.5m8.25 3.75h3M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125Z" />
                                </svg>
                            </div>
                            <h3 class="text-lg font-medium text-white mb-2"><%= __('server.backups.empty_title') %></h3>
                            <p class="text-indigo-200/60"><%= __('server.backups.empty_desc') %></p>
                        </div>
                    `;
                } else {
                    data.data.forEach(backup => {
                        const backupItem = createBackupItem(backup);
                        backupList.appendChild(backupItem);
                    });
                }
            })
            .catch(error => {
                console.error('Error loading backups:', error);
                hideLoader('backup-list');
                backupList.innerHTML = `
                    <div class="text-center py-8">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-16 h-16 mx-auto text-red-600 mb-4">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 3.75h.008v.008H12v-.008Z" />
                        </svg>
                        <h3 class="text-lg font-medium text-red-400 mb-2"><%= __('server.backups.failed_to_load') %></h3>
                        <p class="text-gray-500"><%= __('server.backups.please_refresh') %></p>
                    </div>
                `;
            });
    }

    function createBackupItem(backup) {
        //console.log(JSON.stringify(backup))
        const item = document.createElement('div');
        item.className = 'backup-list-item bg-white/5 md:bg-transparent hover:bg-white/5 transition-colors duration-200';
        const createdDate = new Date(backup.attributes.created_at).toLocaleString();
                const completedDate = backup.attributes.completed_at ? new Date(backup.attributes.completed_at).toLocaleString() : t.inProgress;

        item.innerHTML = `
            <div class="flex flex-col text-center md:flex-row items-center gap-x-2 w-full">
                <div class="icon flex-shrink-0">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-20 md:size-5 mb-0.5 inline-flex md:mr-1.5">
  <path stroke-linecap="round" stroke-linejoin="round" d="m20.25 7.5-.625 10.632a2.25 2.25 0 0 1-2.247 2.118H6.622a2.25 2.25 0 0 1-2.247-2.118L3.75 7.5M10 11.25h4M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125Z" />
</svg>
                </div>
                <span class="text-gray-200 md:flex-grow font-bold mt-3 md:mt-[0]">${backup.attributes.name}</span>
                <span class="text-gray-400 text-sm mt-4 md:mt-[0]">${formatBytes(backup.attributes.bytes)}</span>
                <span class="text-gray-400 text-sm">${createdDate}</span>
                <span class="text-gray-400 text-sm mr-2 md:mt-[0]">${completedDate}</span>
                <button class="download-backup bg-neutral-600 hover:bg-neutral-700 mt-5 text-white font-medium py-2 px-4 md:mt-[0] md:py-1 md:px-4 rounded-full text-sm md:mr-2 hover:scale-95" data-uuid="${backup.attributes.uuid}">${t.download}</button>
                <button class="delete-backup bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 mt-3 md:py-1 md:px-4 md:mt-[0] rounded-full text-sm hover:scale-95" data-uuid="${backup.attributes.uuid}">${t.delete}</button>
            </div>
        `;

        const downloadButton = item.querySelector('.download-backup');
        downloadButton.addEventListener('click', (e) => {
            e.stopPropagation();
            downloadBackup(backup.attributes.uuid);
        });

        const deleteButton = item.querySelector('.delete-backup');
        deleteButton.addEventListener('click', (e) => {
            e.stopPropagation();
            showDeleteConfirmation(backup.attributes.uuid);
        });

        return item;
    }

    function formatBytes(bytes, decimals = 2) {
        if (bytes === 0) return '0 Bytes';
        const k = 1024;
        const dm = decimals < 0 ? 0 : decimals;
        const sizes = ['Bytes', 'KB', 'MB', 'GB', 'TB', 'PB', 'EB', 'ZB', 'YB'];
        const i = Math.floor(Math.log(bytes) / Math.log(k));
        return parseFloat((bytes / Math.pow(k, i)).toFixed(dm)) + ' ' + sizes[i];
    }

    function downloadBackup(backupUuid) {
        fetch(`/api/server/${serverId}/backups/${backupUuid}/download`)
            .then(response => response.json())
            .then(data => {
                window.open(data.attributes.url, '_blank');
            })
            .catch(error => {
                console.error('Error downloading backup:', error);
                showToast('error', t.downloadError);
            });
    }

    function showDeleteConfirmation(backupUuid) {
        backupToDelete = backupUuid;
        document.getElementById('confirm-delete-modal').classList.add('active');
    }

    function deleteBackup() {
        if (!backupToDelete) return;

        fetch(`/api/server/${serverId}/backups/${backupToDelete}`, {
            method: 'DELETE'
        })
        .then(() => {
            loadBackupList();
            closeModal('confirm-delete-modal');
        })
.catch(error => {
            console.error('Error deleting backup:', error);
            alert(t.deleteError);
        })
        .finally(() => {
            backupToDelete = null;
        });
    }

    function showModal(modalId) {
        const modal = document.getElementById(modalId);
        modal.classList.add('active');
    }

    function closeModal(modalId) {
        const modal = document.getElementById(modalId);
        modal.classList.remove('active');
    }

document.getElementById('create-backup').addEventListener('click', async () => {
    const button = document.getElementById('create-backup');
    const originalText = button.innerHTML;
    
    try {
        // Disable button and show loading state
        button.disabled = true;
        button.innerHTML = `
            <svg class="animate-spin h-5 w-5 inline mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            ${t.creatingLabel}
        `;

        const response = await fetch(`/api/server/${serverId}/backups`, {
            method: 'POST'
        });

        if (!response.ok) {
            throw new Error('Backup creation failed');
        }

        // Show success message in a non-blocking way
        const notification = document.createElement('div');
        notification.className = 'fixed bottom-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg fade-in';
        notification.innerHTML = `
            <div class="flex items-center">
                <svg class="h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                ${t.createStarted}
            </div>
        `;
        document.body.appendChild(notification);

        // Remove notification after 5 seconds
        setTimeout(() => {
            notification.classList.add('fade-out');
            setTimeout(() => notification.remove(), 500);
        }, 5000);

        loadBackupList();
        await response.json();

    } catch (error) {
        console.error('Error creating backup:', error);
        
        const errorMessage = error.message === 'Backup creation failed' 
            ? t.createLimit
            : t.createError;

        // Show error message in a non-blocking way
        const notification = document.createElement('div');
        notification.className = 'fixed bottom-4 right-4 bg-red-500 text-white px-6 py-3 rounded-lg shadow-lg fade-in';
        notification.innerHTML = `
            <div class="flex items-center">
                <svg class="h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
                ${errorMessage}
            </div>
        `;
        document.body.appendChild(notification);

        // Remove notification after 5 seconds
        setTimeout(() => {
            notification.classList.add('fade-out');
            setTimeout(() => notification.remove(), 500);
        }, 5000);

    } finally {
        // Reset button state after 1 second
        setTimeout(() => {
            button.disabled = false;
            button.innerHTML = originalText;
        }, 1000);
    }
});

    document.getElementById('cancel-delete').addEventListener('click', () => {
        closeModal('confirm-delete-modal');
        backupToDelete = null;
    });

    document.getElementById('confirm-delete').addEventListener('click', deleteBackup);

    // Load server details
    fetch(`/api/server/${serverId}`)
        .then(response => response.json())
        .then(data => {
            document.getElementById('server-name').textContent = data.attributes.name;
            document.getElementById('server-name-breadcrumb').textContent = data.attributes.name;
            document.getElementById('server-description').textContent = data.attributes.description || t.noDescription;
        });

    // Initial load
    loadBackupList();
</script>
<%- include('../components/bottom') %>
