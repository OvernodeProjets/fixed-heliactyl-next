        () => {
            fetch(`/api/server/${serverId}/reinstall`, {
                method: 'POST'
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                return;
            })
            .then(data => {
                alert('<%= __('server.settings.reinstall_started') %>');
                // Optionally refresh the page or update UI
                window.location.reload();
            })
            .catch(error => {
                console.error('Error:', error);
                alert('<%= __('server.settings.reinstall_error') %>')
            });
        }
    );
});

<% if (req.query.numeric !== '0') { %>
    // Delete server
    document.getElementById('delete-server').addEventListener('click', () => {
        showConfirmationModal(
            '<%= __('server.settings.delete_confirm_title') %>',
            '<%= __('server.settings.delete_confirm_text') %>',
            () => {
                window.location.href = `/api/server/<%= req.query.numeric %>/delete`;
            }
        );
    });
<% } %>
</script>

