<%- include('../components/top') %>
<style>
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.3s ease, visibility 0.3s ease;
    }
    .modal-content {
        background-color: #1a1c20;
        padding: 2rem;
        border-radius: 0.5rem;
        overflow: auto;
        transform: scale(0.9);
        opacity: 0;
        transition: transform 0.3s ease, opacity 0.3s ease;
    }
    .modal-overlay.active {
        opacity: 1;
        visibility: visible;
    }
    .modal-overlay.active .modal-content {
        transform: scale(1);
        opacity: 1;
    }
</style>
<main class="flex-grow container mx-auto px-4 py-8">
    <%- include('../components/server_header', {
        backButtonText: __('server.advanced.back_to_list')
    }) %>   
<div id="alert-container" class="mb-4 space-y-2"></div>
    <%- include('../components/server') %>

    <div class="bg-white/5 rounded-xl p-6 mb-6">
        <h2 class="text-xl font-semibold mb-4 flex items-center"><%= __('server.advanced.ptero_title') %> <span class="ml-4 inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800"><%= __('server.advanced.ptero_badge') %></span></h2>
        <p class="text-gray-400"><%= __('server.advanced.ptero_desc') %></p>

        <br>
        <!-- if they want to continue -->
    <a href="/api/panel" class="inline-block bg-indigo-500 hover:bg-indigo-700 text-white font-medium py-2 px-6 rounded-xl hover:scale-95 transition">
        <%= __('server.advanced.go_to_panel') %>
    </a>
    <p class="text-gray-400 mt-4"><%= __('server.advanced.ptero_creds') %> <a href="/account" class="text-indigo-300 hover:text-indigo-200 transition"><%= __('server.advanced.sftp_credentials') %></a> <%= __('server.advanced.page') %></p>
    </div>

    <div class="bg-white/5 rounded-xl p-6 mb-6">
        <h2 class="text-xl font-semibold mb-4"><%= __('server.advanced.title') %></h2>
        <div id="variables-list" class="space-y-4">
            <!-- Variables will be populated here -->
        </div>
    </div>
</main>

<!-- Edit Variable Modal -->
<div id="edit-variable-modal" class="modal-overlay z-50">
    <div class="modal-content max-w-[85%] md:max-w-[50%] max-h-[70%]">
        <h3 class="text-xl font-semibold mb-4" id="modal-title"><%= __('server.advanced.edit_variable') %></h3>
        <input type="text" id="variable-name" class="w-full p-2 mb-2 bg-white/5 border-none outline-none ring-none transition focus:ring-2 focus:ring-indigo-500 text-white rounded" readonly>
        <input type="text" id="variable-value" class="w-full p-2 mb-4 bg-white/5 border-none outline-none ring-none transition focus:ring-2 focus:ring-indigo-500 text-white rounded" placeholder="<%= __('server.advanced.variable_value') %>">
        <div class="flex justify-end">
            <button id="close-modal" class="bg-neutral-600 hover:bg-neutral-700 text-white font-medium py-2 px-4 rounded-full hover:scale-95 transition mr-2"><%= __('server.advanced.cancel') %></button>
            <button id="save-variable" class="bg-indigo-500 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-full hover:scale-95 transition"><%= __('server.advanced.save_changes') %></button>
        </div>
    </div>
</div>

<script>
    const serverId = new URLSearchParams(window.location.search).get('id');
    const t = {
        noDescription: <%- JSON.stringify(__('server.advanced.no_description')) %>,
        edit: <%- JSON.stringify(__('server.advanced.edit')) %>,
        editVariable: <%- JSON.stringify(__('server.advanced.edit_variable')) %>,
        currentValue: <%- JSON.stringify(__('server.advanced.current_value')) %>,
        updateError: <%- JSON.stringify(__('server.advanced.update_error')) %>
    };
    let currentVariables = [];

    fetch(`/api/server/${serverId}`)
        .then(response => response.json())
        .then(data => {
            document.getElementById('server-name').textContent = data.attributes.name;
            document.getElementById('server-name-breadcrumb').textContent = data.attributes.name;
            document.getElementById('server-description').textContent = data.attributes.description || t.noDescription;
        });

    function loadVariables() {
        fetch(`/api/server/${serverId}/variables`)
            .then(response => response.json())
            .then(data => {
                currentVariables = data.data;
                const variablesList = document.getElementById('variables-list');
                variablesList.innerHTML = '';

                data.data.forEach(variable => {
                    const variableItem = createVariableItem(variable.attributes);
                    variablesList.appendChild(variableItem);
                });
            })
            .catch(error => {
                console.error('Error loading variables:', error);
            });
    }

    function createVariableItem(variable) {
        const item = document.createElement('div');
        item.className = 'bg-white/5 p-4 rounded-lg';
        
        let editButtonHtml = '';
        if (variable.is_editable && !variable.rules.includes('readonly')) {
             editButtonHtml = `
                <button class="edit-variable ml-5 bg-indigo-500 hover:bg-indigo-700 text-white font-medium py-1.5 px-4 rounded-full transition" data-key="${variable.env_variable}">
                    ${t.edit}
                </button>
            `;
        } else {
             editButtonHtml = `
                <button class="ml-5 bg-white/5 text-gray-500 font-medium py-1.5 px-4 rounded-full cursor-not-allowed" disabled>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                    </svg>
                </button>
            `;
        }

        item.innerHTML = `
            <div class="flex justify-between items-center">
                <div>
                    <h3 class="text-lg font-semibold">${variable.name}</h3>
                    <p class="text-sm text-gray-400 mt-3">${variable.description}</p>
                </div>
                ${editButtonHtml}
            </div>
            <div class="mt-2 truncate w-[85%]">
                <span class="text-sm font-medium text-gray-400">${t.currentValue}</span>
                <span class="text-sm ml-2">${variable.server_value}</span>
            </div>
        `;

        if (variable.is_editable && !variable.rules.includes('readonly')) {
            const editButton = item.querySelector('.edit-variable');
            editButton.addEventListener('click', () => openEditModal(variable));
        }

        return item;
    }

    function openEditModal(variable) {
        const modal = document.getElementById('edit-variable-modal');
        const nameInput = document.getElementById('variable-name');
        const valueInput = document.getElementById('variable-value');

        document.getElementById('modal-title').textContent = `${t.editVariable} ${variable.name}`;
        nameInput.value = variable.env_variable;
        valueInput.value = variable.server_value;

        modal.classList.add('active');
    }

    function closeModal(modalId) {
        const modal = document.getElementById(modalId);
        modal.classList.remove('active');
    }

    document.getElementById('close-modal').addEventListener('click', () => closeModal('edit-variable-modal'));

    document.getElementById('save-variable').addEventListener('click', () => {
        const key = document.getElementById('variable-name').value;
        const value = document.getElementById('variable-value').value;

        fetch(`/api/server/${serverId}/variables`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ key, value })
        })
        .then(response => response.json())
        .then(() => {
            closeModal('edit-variable-modal');
            loadVariables();
        })
        .catch(error => {
            console.error('Error updating variable:', error);
            alert(t.updateError);
        });
    });

    // Initial load
    loadVariables();
</script>
<%- include('../components/bottom') %>