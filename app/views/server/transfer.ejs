    <%- include('../components/top') %>
    <main class="flex-grow container mx-auto px-4 py-8">
        <%- include('../components/server_header', {
            backButtonText: __('website.transfer.back_to_list')
        }) %>      
<div id="alert-container" class="mb-4 space-y-2"></div>
        <%- include('../components/server') %>

        <!-- Warning Alert -->
        <div class="bg-amber-500/10 border border-amber-500/20 rounded-xl p-6 mt-8">
            <div class="flex items-center gap-3 text-center md:text-start md:items-start flex-col md:flex-row">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-10 md:size-6 text-amber-500 mt-1">
                    <path fill-rule="evenodd" d="M9.401 3.003c1.155-2 4.043-2 5.197 0l7.355 12.748c1.154 2-.29 4.5-2.599 4.5H4.645c-2.309 0-3.752-2.5-2.598-4.5L9.4 3.003zM12 8.25a.75.75 0 01.75.75v3.75a.75.75 0 01-1.5 0V9a.75.75 0 01.75-.75zm0 8.25a.75.75 0 100-1.5.75.75 0 000 1.5z" clip-rule="evenodd" />
                </svg>
                <div class="ml-3">
                    <h3 class="text-lg font-semibold text-amber-500"><%= __('website.transfer.experimental_title') %></h3>
                    <p class="mt-2 text-sm text-gray-300"><%= __('website.transfer.experimental_desc') %></p>
                    <ul class="mt-2 text-sm text-gray-300 list-disc list-inside text-start space-y-1">
                        <li><%= __('website.transfer.risk_1') %></li>
                        <li><%= __('website.transfer.risk_2') %></li>
                        <li><%= __('website.transfer.risk_3') %></li>
                        <li><%= __('website.transfer.risk_4') %></li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Transfer Server Section -->
        <div class="bg-white/5 rounded-xl p-6 mt-8">
            <h2 class="text-xl font-semibold mb-4 text-white"><%= __('website.transfer.title') %></h2>
            
            <!-- Node Selection -->
            <div class="space-y-6">
                <!-- Categories -->
                <div id="node-grid" class="grid gap-8">
                    <!-- Node categories will be inserted here dynamically -->
                </div>
            </div>

            <!-- Transfer Button -->
            <div class="mt-8 flex flex-col items-center justify-center space-y-4">
                <p class="text-sm text-gray-400 text-center max-w-lg">
                    <%= __('website.transfer.ack') %>
                </p>
                <button id="transfer-server" class="bg-indigo-500 hover:bg-indigo-700 text-white font-medium py-3 px-8 rounded-full hover:scale-95 transition disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:scale-100" disabled>
                    <%= __('website.transfer.button') %>
                </button>
            </div>
        </div>
    </main>

    <!-- Update the modal content to include a spinner state -->
    <div id="confirmation-modal" class="fixed inset-0 bg-black/75 backdrop-blur-sm z-50 flex items-center justify-center hidden">
        <div class="bg-[#0e0e10] rounded-xl p-8 w-[85%] md:w-[50%] mx-4">
            <div class="flex flex-col items-center text-center">
                <!-- This is the warning icon that shows by default -->
                <div id="modal-icon-warning">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-12 h-12 text-amber-500">
                        <path fill-rule="evenodd" d="M9.401 3.003c1.155-2 4.043-2 5.197 0l7.355 12.748c1.154 2-.29 4.5-2.599 4.5H4.645c-2.309 0-3.752-2.5-2.598-4.5L9.4 3.003zM12 8.25a.75.75 0 01.75.75v3.75a.75.75 0 01-1.5 0V9a.75.75 0 01.75-.75zm0 8.25a.75.75 0 100-1.5.75.75 0 000 1.5z" clip-rule="evenodd" />
                    </svg>
                </div>
                <!-- This is the loading spinner that shows during API call -->
                <div id="modal-icon-loading" class="hidden">
                    <svg class="animate-spin w-12 h-12 text-indigo-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                </div>
                <h3 class="text-xl font-semibold mt-4 text-white" id="modal-title"></h3>
                <p class="break-all text-gray-300 mt-2" id="modal-message"></p>
                <div class="w-full border-t border-white/10 my-6"></div>
                <div class="flex flex-col sm:flex-row justify-center space-y-3 sm:space-y-0 sm:space-x-4 w-full">
                    <button id="modal-cancel" class="w-full sm:w-auto bg-white/10 hover:bg-white/15 text-white font-medium py-2 px-6 rounded-lg transition">
                        <%= __('website.transfer.modal_cancel') %>
                    </button>
                    <button id="modal-confirm" class="w-full sm:w-auto bg-amber-500 hover:bg-amber-400 text-black font-medium py-2 px-6 rounded-lg transition flex items-center justify-center min-w-[160px]">
                        <span id="modal-confirm-text"><%= __('website.transfer.modal_continue') %></span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script>
        const serverId = new URLSearchParams(window.location.search).get('numeric');
        let selectedNodeId = null;
        let serverNode = null;
        let nodeData = [];
        function createNodeGrid() {
            const grid = document.getElementById('node-grid');
            grid.innerHTML = ''; 
            
            nodeData.forEach(category => {
                const categorySection = document.createElement('div');
                categorySection.className = 'space-y-4';
                
                // Category header
                const categoryHeader = document.createElement('div');
                categoryHeader.className = 'flex items-center space-x-2';
                categoryHeader.innerHTML = `
                    <h3 class="text-lg font-semibold text-white">${category.category}</h3>
                    <div class="flex-grow border-t border-white/5"></div>
                `;
                categorySection.appendChild(categoryHeader);
                
                // Nodes grid
                const nodesGrid = document.createElement('div');
                nodesGrid.className = 'grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4';
                
                category.nodes.forEach(node => {
                    const nodeCard = document.createElement('div');
                    const memoryPercent = node.totalMemory ? Math.round((node.usedMemory / node.totalMemory) * 100) : 0;
                    const diskPercent = node.totalDisk ? Math.round((node.usedDisk / node.totalDisk) * 100) : 0;
                    const freeMemoryGB = (node.freeMemory / 1024).toFixed(1);
                    const freeDiskGB = (node.freeDisk / 1024).toFixed(1);
                    const isCurrentNode = node.idName === serverNode;
                    
                    // Status badge based on priority: Current > No Ports > No RAM > No Disk > Available
                    let statusBadge = '';
                    if (isCurrentNode) {
                        statusBadge = `<span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-blue-500/20 text-blue-400">Current</span>`;
                    } else if (node.noAllocations) {
                        statusBadge = `<span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-gray-700 text-gray-300">No Ports</span>`;
                    } else if (node.noRam) {
                        statusBadge = `<span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-red-500/20 text-red-400">No RAM</span>`;
                    } else if (node.noDisk) {
                        statusBadge = `<span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-orange-500/20 text-orange-400">No Disk</span>`;
                    } else {
                        statusBadge = `<span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-green-500/20 text-green-400">${node.location}</span>`;
                    }
                    
                    nodeCard.className = `p-4 rounded-lg ${node.disabled ? 'bg-white/5 opacity-50' : 'bg-white/5 hover:bg-white/10'} transition cursor-pointer border border-transparent`;
                    nodeCard.innerHTML = `
                        <div class="flex items-center justify-between mb-3">
                            <span class="font-medium text-white">${node.name}</span>
                            ${statusBadge}
                        </div>
                        <div class="space-y-2">
                            <div>
                                <div class="flex justify-between text-xs text-gray-400 mb-1">
                                    <span>RAM</span>
                                    <span>${freeMemoryGB} GB free</span>
                                </div>
                                <div class="w-full bg-white/10 rounded-full h-1.5">
                                    <div class="h-1.5 rounded-full ${memoryPercent > 90 ? 'bg-red-500' : memoryPercent > 70 ? 'bg-amber-500' : 'bg-green-500'}" style="width: ${memoryPercent}%"></div>
                                </div>
                            </div>
                            <div>
                                <div class="flex justify-between text-xs text-gray-400 mb-1">
                                    <span>Disk</span>
                                    <span>${freeDiskGB} GB free</span>
                                </div>
                                <div class="w-full bg-white/10 rounded-full h-1.5">
                                    <div class="h-1.5 rounded-full ${diskPercent > 90 ? 'bg-red-500' : diskPercent > 70 ? 'bg-amber-500' : 'bg-green-500'}" style="width: ${diskPercent}%"></div>
                                </div>
                            </div>
                        </div>
                    `;
                    
                    if (!node.disabled) {
                        nodeCard.addEventListener('click', () => selectNode(node.id, nodeCard));
                    }
                    
                    nodesGrid.appendChild(nodeCard);
                });
                
                categorySection.appendChild(nodesGrid);
                grid.appendChild(categorySection);
            });
        }

        function selectNode(nodeId, nodeElement) {
            // Remove highlight from previously selected node
            document.querySelectorAll('#node-grid .ring-2').forEach(el => {
                el.classList.remove('ring-2', 'ring-indigo-500', 'border-transparent');
            });
            
            // Highlight the selected node
            nodeElement.classList.add('ring-2', 'ring-indigo-500', 'border-transparent');
            selectedNodeId = nodeId;
            
            // Enable/disable transfer button
            const transferButton = document.getElementById('transfer-server');
            transferButton.disabled = !selectedNodeId;
        }

        function showConfirmationModal(title, message, onConfirm) {
            const modal = document.getElementById('confirmation-modal');
            const modalTitle = document.getElementById('modal-title');
            const modalMessage = document.getElementById('modal-message');
            const confirmButton = document.getElementById('modal-confirm');
            const cancelButton = document.getElementById('modal-cancel');

            modalTitle.textContent = title;
            modalMessage.textContent = message;
            modal.classList.remove('hidden');

            const closeModal = () => {
                modal.classList.add('hidden');
                confirmButton.onclick = null;
                cancelButton.onclick = null;
            };

            confirmButton.onclick = () => {
                onConfirm();
                closeModal();
            };

            cancelButton.onclick = closeModal;
            modal.onclick = (e) => {
                if (e.target === modal) closeModal();
            };
        }

        function setModalLoading(isLoading) {
            const warningIcon = document.getElementById('modal-icon-warning');
            const loadingIcon = document.getElementById('modal-icon-loading');
            const confirmButton = document.getElementById('modal-confirm');
            const cancelButton = document.getElementById('modal-cancel');
            const confirmText = document.getElementById('modal-confirm-text');
            
            if (isLoading) {
                warningIcon.classList.add('hidden');
                loadingIcon.classList.remove('hidden');
                confirmButton.disabled = true;
                cancelButton.disabled = true;
                confirmButton.classList.add('opacity-50', 'cursor-not-allowed');
                cancelButton.classList.add('opacity-50', 'cursor-not-allowed');
                confirmText.textContent = '<%= __('website.transfer.modal_transferring') %>';
            } else {
                warningIcon.classList.remove('hidden');
                loadingIcon.classList.add('hidden');
                confirmButton.disabled = false;
                cancelButton.disabled = false;
                confirmButton.classList.remove('opacity-50', 'cursor-not-allowed');
                cancelButton.classList.remove('opacity-50', 'cursor-not-allowed');
                confirmText.textContent = '<%= __('website.transfer.modal_continue') %>';
            }
        }

        // Precompiled templates to avoid EJS object literals inside JS
        const confirmTpl = <%- JSON.stringify(__('website.transfer.confirm_text', { nodeId: '__NODE__' })) %>;
        const failedTpl = <%- JSON.stringify(__('website.transfer.failed_text', { error: '__ERR__' })) %>;

        document.getElementById('transfer-server').addEventListener('click', () => {
            if (selectedNodeId) {
                showConfirmationModal(
                    '<%= __('website.transfer.confirm_title') %>',
                    confirmTpl.replace('__NODE__', String(selectedNodeId)),
                    () => {
                        setModalLoading(true);

                        fetch(`/api/server/transfer`, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({
                                id: serverId,
                                nodeId: selectedNodeId
                            })
                        })
                        .then(response => {
                            setModalLoading(false);
                            if (response.ok) {
                                showConfirmationModal(
                                    '<%= __('website.transfer.initiated_title') %>',
                                    '<%= __('website.transfer.initiated_text') %>',
                                    () => window.location.reload()
                                );
                            } else {
                                return response.json().then(error => {
                                showAlert('error',
                                    '<%= __('website.transfer.failed_title') %>',
                                    failedTpl.replace('__ERR__', JSON.stringify(error))
                                    );
                                });
                            }
                        })
                        .catch(error => {
                            setModalLoading(false);
                            console.error('Error:', error);
                            showAlert('error',
                                '<%= __('website.transfer.error_title') %>',
                                '<%= __('website.transfer.error_text') %>'
                            );
                        });
                    }
                );
            }
        });

        // Initialize

document.addEventListener('DOMContentLoaded', async () => {
    let serverMemory = 0;
    let serverDisk = 0;
    
    async function availableCapacity(nodeId, requiredMemory, requiredDisk) {
        try {
            const response = await fetch(`/api/servers/capacity/${nodeId}?requiredMemory=${requiredMemory}&requiredDisk=${requiredDisk}`);
            if (!response.ok) {
                throw new Error(`HTTP error! status: ${response.status}`);
            }
            const data = await response.json();
            return {
                // Allocations (checked first)
                allocations: data.availableAllocations || 0,
                // Memory (checked second)
                freeMemory: data.freeMemory || 0,
                totalMemory: data.totalMemory || 0,
                usedMemory: data.usedMemory || 0,
                hasEnoughMemory: data.hasEnoughMemory !== false,
                // Disk (checked third)
                freeDisk: data.freeDisk || 0,
                totalDisk: data.totalDisk || 0,
                usedDisk: data.usedDisk || 0,
                hasEnoughDisk: data.hasEnoughDisk !== false
            };
        } catch (error) {
            console.error(`Error fetching capacity for node ${nodeId}:`, error);
            return { allocations: 0, freeMemory: 0, totalMemory: 0, usedMemory: 0, hasEnoughMemory: false, freeDisk: 0, totalDisk: 0, usedDisk: 0, hasEnoughDisk: false };
        }
    }

    const allowedLocationIds = Object.keys(JSON.parse('<%- JSON.stringify(settings.api.client.locations || {}) %>')).map(id => parseInt(id));

    try {
        const locationsResponse = await fetch('/api/locations');
        const locations = await locationsResponse.json();
        
        // Transform locations into nodeData format grouped by country
        // Only include locations that are configured in config.toml
        nodeData = Object.entries(locations).reduce((acc, [locationId, location]) => {
            // Filter: only include locations that are in the config
            if (!allowedLocationIds.includes(parseInt(locationId))) return acc;
            if (!location.nodes || !location.nodes.length) return acc;
            
            for (const node of location.nodes) {
                const existingCategory = acc.find(cat => cat.category === location.country);
                const nodeInfo = {
                    id: node.id,
                    idName: node.name,
                    name: node.name,
                    locationName: location.name,
                    location: location.region,
                    disabled: false
                };
                
                if (existingCategory) {
                    existingCategory.nodes.push(nodeInfo);
                } else {
                    acc.push({
                        category: location.country,
                        nodes: [nodeInfo]
                    });
                }
            }
            
            return acc;
        }, []);
    } catch (error) {
        console.error('Error fetching locations:', error);
    }

    const serverResponse = await fetch(`/api/server/<%= req.query.id %>`);
    const serverData = await serverResponse.json();
    document.getElementById('server-name').textContent = serverData.attributes.name;
    document.getElementById('server-name-breadcrumb').textContent = serverData.attributes.name;
    document.getElementById('server-description').textContent = serverData.attributes.description || "No description set.";
    serverNode = serverData.attributes.node;
    serverMemory = serverData.attributes.limits?.memory || 0;
    serverDisk = serverData.attributes.limits?.disk || 0;

    const nodePromises = nodeData.map(async category => {
        for (const node of category.nodes) {
            const capacity = await availableCapacity(node.id, serverMemory, serverDisk);
            
            // Check in order: 1. Allocations, 2. RAM, 3. Disk
            const noAllocations = capacity.allocations <= 0;
            const noRam = !capacity.hasEnoughMemory;
            const noDisk = !capacity.hasEnoughDisk;
            const isCurrentNode = node.idName === serverNode;
            
            node.disabled = noAllocations || noRam || noDisk || isCurrentNode;
            node.freeMemory = capacity.freeMemory;
            node.totalMemory = capacity.totalMemory;
            node.usedMemory = capacity.usedMemory;
            node.freeDisk = capacity.freeDisk;
            node.totalDisk = capacity.totalDisk;
            node.usedDisk = capacity.usedDisk;
            
            // Set reason for being disabled (in priority order)
            node.noAllocations = noAllocations && !isCurrentNode;
            node.noRam = !noAllocations && noRam && !isCurrentNode;
            node.noDisk = !noAllocations && !noRam && noDisk && !isCurrentNode;
        }
    });

    await Promise.all(nodePromises);
    createNodeGrid();
    document.getElementById('transfer-server').disabled = true;
});

    </script>
    <%- include('../components/bottom') %>
