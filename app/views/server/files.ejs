<main class="flex-grow container mx-auto px-4 py-8">
    <%- include('../components/server_header', {
        backButtonText: 'Back to server list'
    }) %>     
      <div id="alert-container" class="mb-4 space-y-2"></div> 
    <%- include('../components/server') %>

    <div class="bg-white/5 rounded-xl p-4 md:p-6 mb-6">
        <!-- Header row with title and view toggles -->
        <div class="flex flex-wrap gap-3 justify-between items-center mb-4">
            <h2 class="text-lg md:text-xl font-semibold heavy"><%= __('server.files.title') %></h2>
            
            <div class="flex items-center gap-2 flex-wrap">
                <!-- View toggle buttons -->
                <div class="flex bg-black/20 rounded-lg p-1">
                    <button id="view-grid" class="p-1.5 rounded-md text-gray-400 hover:text-white hover:bg-white/10 transition-colors" title="Grid View">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
                        </svg>
                    </button>
                    <button id="view-list" class="p-1.5 rounded-md text-gray-400 hover:text-white hover:bg-white/10 transition-colors" title="List View">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                    </button>
                </div>
                
                <!-- Select all -->
                <div class="hidden md:flex p-2.5 bg-black/20 rounded-lg items-center">
                    <input 
                        type="checkbox" 
                        id="select-all" 
                        class="form-checkbox h-4 w-4 text-indigo-500 border border-white/5 bg-white/5 rounded focus:ring-indigo-500"
                    >
                    <label for="select-all" class="select-all-label px-2 text-sm"><%= __('server.files.select_all') %></label>
                </div>
            </div>
        </div>
        
        <!-- Search, sort row and action buttons - same row on desktop -->
        <div class="flex flex-col md:flex-row gap-3 mb-4">
            <!-- Search input -->
            <div class="relative flex-grow">
                <input 
                    type="text" 
                    id="file-search" 
                    class="w-full bg-black/20 border border-transparent rounded-lg py-2.5 px-4 pl-10 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200"
                    placeholder="<%= __('server.files.search_files') %>"
                >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 absolute left-3 top-3 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
            </div>
            
            <!-- Sort controls -->
            <div class="flex items-center gap-2">
                <select 
                    id="sort-by" 
                    class="flex-1 md:flex-none bg-black/20 rounded-lg border border-transparent py-2.5 px-4 text-white text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200"
                >
                    <option value="name"><%= __('server.files.sort_name') %></option>
                    <option value="size"><%= __('server.files.sort_size') %></option>
                    <option value="type"><%= __('server.files.sort_type') %></option>
                    <option value="date"><%= __('server.files.sort_date') %></option>
                </select>
                <button 
                    id="sort-direction" 
                    class="rounded-lg p-2.5 text-white hover:bg-black/15 transition-all duration-200 bg-black/20"
                    title="Toggle sort direction"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4h13M3 8h9m-9 4h6m4 0l4-4m0 0l4 4m-4-4v12" />
                    </svg>
                </button>
            </div>

            <!-- Action buttons - inline on desktop, stacked on mobile -->
            <div class="flex flex-wrap md:flex-nowrap gap-2">
                <button id="upload-file" class="action-button flex-1 md:flex-none bg-indigo-500 hover:bg-indigo-700 text-white font-medium py-2.5 px-4 rounded-xl transition flex items-center justify-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
                    </svg>
                    <span><%= __('server.files.upload') %></span>
                </button>
                <button id="create-folder" class="action-button flex-1 md:flex-none bg-white/5 hover:bg-white/10 text-white font-medium py-2.5 px-4 rounded-xl transition flex items-center justify-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6m-3-3v6m-9 1V7a2 2 0 012-2h6l2 2h6a2 2 0 012 2v8a2 2 0 01-2 2H5a2 2 0 01-2-2z" />
                    </svg>
                    <span class="hidden sm:inline"><%= __('server.files.new_folder') %></span>
                    <span class="sm:hidden">Folder</span>
                </button>
                <button id="new-file" class="action-button flex-1 md:flex-none bg-white/5 hover:bg-white/10 text-white font-medium py-2.5 px-4 rounded-xl transition flex items-center justify-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6m-3-3v6m5 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    <span class="hidden sm:inline"><%= __('server.files.new_file') %></span>
                    <span class="sm:hidden">File</span>
                </button>
            </div>
        </div>

        <div id="file-list-header" class="file-list-header hidden">
            <div></div>
            <div>Name</div>
            <div>Size</div>
            <div>Type</div>
            <div>Date Modified</div>
            <div></div>
        </div>
        
        <div id="file-list" class="file-grid">
            <!-- File list will be populated here -->
        </div>
    </div>
    <div id="drop-zone" class="drop-zone mt-4 border-2 border-dashed border-white/10 p-8 rounded-2xl transition-all duration-200 hover:border-indigo-500/50 hover:bg-indigo-500/5 group">
        <div class="flex flex-col items-center justify-center gap-4">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-8 h-8 text-neutral-500 group-hover:text-indigo-400 transition-colors duration-200">
                <path fill-rule="evenodd" d="M11.47 2.47a.75.75 0 0 1 1.06 0l4.5 4.5a.75.75 0 0 1-1.06 1.06l-3.22-3.22V16.5a.75.75 0 0 1-1.5 0V4.81L8.03 8.03a.75.75 0 0 1-1.06-1.06l4.5-4.5ZM3 15.75a.75.75 0 0 1 .75-.75h16.5a.75.75 0 0 1 0 1.5H3.75a.75.75 0 0 1-.75-.75Zm0 2.25a.75.75 0 0 1 .75-.75h16.5a.75.75 0 0 1 0 1.5H3.75a.75.75 0 0 1-.75-.75Z" clip-rule="evenodd" />
            </svg>
            <div class="text-center">
                <p class="text-sm font-medium text-neutral-300 group-hover:text-indigo-300 transition-colors duration-200"><%= __('server.files.drag_drop') %></p>
                <p class="text-xs text-neutral-500 group-hover:text-indigo-400 transition-colors duration-200 mt-1"><%= __('server.files.or_click_upload') %></p>
            </div>
        </div>
    </div>
</main>

