            if (whenRenew) {
                whenRenew.textContent = <%- JSON.stringify(__('server.manage.when_renew_text')) %>.replace('{{threshold}}', renewalConfig.warningThreshold);
            }
        }
        
        const renewalBadge = document.getElementById('renewal-badge');
        const renewalTime = document.getElementById('renewal-time');
        const renewButton = document.getElementById('renew-server');
        
        // Update time remaining
        if (data.timeRemaining.hours <= 0 && data.timeRemaining.minutes <= 0) {
            renewalTime.innerHTML = `<span class="text-red-500"><%= __('server.manage.expired') %></span>`;
        } else if (data.hasRenewalBypass) {
            renewalTime.textContent = "Unlimited";
        } else {
            renewalTime.textContent = `${data.timeRemaining.hours}h ${data.timeRemaining.minutes}m <%= __('server.manage.remaining_suffix') %>`;
        }
        
        // Show/hide renew button and update status
        // Show renewal button if within threshold
        if (data.timeRemaining.hours < renewalConfig.warningThreshold) {
            renewButton.classList.remove('hidden');
            renewButton.disabled = false;
            renewalBadge.classList.remove('hidden');
            
            if (data.isExpired) {
                renewalBadge.classList.add('bg-red-600');
                renewalBadge.classList.remove('bg-yellow-600', 'bg-indigo-500', 'bg-emerald-600');
                renewalBadge.textContent = '<%= __('server.manage.expired') %>';
