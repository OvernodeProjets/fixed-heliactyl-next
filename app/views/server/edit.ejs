<%- include('../components/top') %>
<main class="flex-grow container mx-auto px-4 py-8">
    <%- include('../components/server_header', {
        backButtonText: __('server.settings.back_to_list')
    }) %>      
<div id="alert-container" class="mb-4 space-y-2"></div>
    <% if (req.query.err) { %>
        <div class="mb-6 p-4 rounded-xl bg-red-500/10 border border-red-500/20">
            <div class="flex items-center gap-3">
                 <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                <span class="text-red-500 text-sm font-medium">
                    <%- (() => {
                        switch (req.query.err) {
                            case "LOCATIONLIMITRAM":
                            case "LOCATIONLIMITDISK":
                            case "LOCATIONLIMITCPU":
                                 return `${__('server.create.error_location_limit')} <b>${req.query.num}</b>${req.query.err.slice(-3) === "RAM" ? "MB RAM" : req.query.err.slice(-4) === "DISK" ? "MB disk" : "% CPU"}.`;
                            case "MISSINGVARIABLE":
                                return "Missing required fields.";
                            case "EXCEEDRAM":
                                return "You have exceeded your RAM plan.";
                            case "EXCEEDDISK":
                                return "You have exceeded your Disk plan.";
                            case "EXCEEDCPU":
                                return "You have exceeded your CPU plan.";
                            default:
                                if (req.query.err.startsWith("EXCEED")) return "Resource limit exceeded.";
                                return "An error occurred while updating the server: " + req.query.err;
                        }
                    })() %>
                </span>
            </div>
        </div>
    <% } %>
    <%- include('../components/server') %>

    <div class="max-w-7xl mx-auto">
        <div class="bg-white/5 px-4 py-5 border-b border-white/10 rounded-t-2xl sm:px-6">
            <div class="sm:flex sm:items-start sm:justify-between">
                <div>
                    <h3 class="text-lg leading-6 font-medium text-white"><%= __('server.edit.panel_title') %></h3>
                    <p class="mt-1 text-sm text-gray-300"><%= __('server.edit.panel_subtitle') %></p>
                </div>
            </div>
        </div>
        <div class="bg-white/5 rounded-b-2xl px-4 py-5 sm:px-6 text-gray-300 text-sm">
            <%
let id;
id = req.query.numeric
            %>
            <%
                const serversData = (pterodactyl && pterodactyl.relationships && pterodactyl.relationships.servers && pterodactyl.relationships.servers.data) ? pterodactyl.relationships.servers.data : [];
                let ram = 0;
                let disk = 0;
                let cpu = 0;
                let servers = serversData.length;
                for (let i = 0, len = serversData.length; i < len; i++) {
                    ram = ram + (typeof serversData[i].attributes.limits.memory == "number" ? serversData[i].attributes.limits.memory : 0);
                    disk = disk + (typeof serversData[i].attributes.limits.disk == "number" ? serversData[i].attributes.limits.disk : 0);
                    cpu = cpu + (typeof serversData[i].attributes.limits.cpu == "number" ? serversData[i].attributes.limits.cpu : 0);
                }
            %>
            <% if (id) { %>
                <% if (serversData.filter(name => name.attributes.id == id).length == 1) {
                    let serverinfo = serversData.filter(name => name.attributes.id == id)[0];
                    let attemptegg = null;
                    let attemptname = null;
                    for (let [name, value] of Object.entries(settings.api.client.eggs)) {
                        if (settings.api.client.eggs[name].info.egg == serverinfo.attributes.egg) {
                            attemptegg = settings.api.client.eggs[name];
                            attemptname = name;
                        };
                    };
                    let egginfo = attemptegg ? attemptegg.display : "???";
                %>
                <div class="grid grid-cols-3 gap-6">
                    <div class="col-span-3 sm:col-span-2">
                        <label for="ram" class="block text-sm font-medium text-gray-400"><%= __('server.edit.ram_label') %></label>
                        <div class="mt-1 flex rounded-xl shadow-sm">
                            <input type="text" name="ram" id="ram" class="transition ease-in-out delay-100 block w-full flex-1 text-white rounded-full bg-white/10 border-white/10 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm px-2 py-1 border placeholder-gray-400 focus:ring-2" placeholder="<%= (packages ? packages.ram : 0)/1024 + extraresources.ram/1024 - ram/1024 + serverinfo.attributes.limits.memory/1024 %>" value="<%= (packages ? packages.ram : 0)/1024 + extraresources.ram/1024 - ram/1024 + serverinfo.attributes.limits.memory/1024 %>">
                        </div>
                    </div>
                </div><br>

                <div class="grid grid-cols-3 gap-6">
                    <div class="col-span-3 sm:col-span-2">
                        <label for="cpu" class="block text-sm font-medium text-gray-400"><%= __('server.edit.cpu_label') %></label>
                        <div class="mt-1 flex rounded-xl shadow-sm">
                            <input type="text" name="cpu" id="cpu" class="transition ease-in-out delay-100 block w-full flex-1 text-white rounded-full bg-white/10 border-white/10 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm px-2 py-1 border placeholder-gray-400 focus:ring-2" value="<%= (packages ? packages.cpu/100 : 0) + extraresources.cpu/100 - cpu/100 + serverinfo.attributes.limits.cpu/100 %>" placeholder="<%= (packages ? packages.cpu/100 : 0) + extraresources.cpu/100 - cpu/100 + serverinfo.attributes.limits.cpu/100 %>">
                        </div>
                    </div>
                </div><br>

                <div class="grid grid-cols-3 gap-6">
                    <div class="col-span-3 sm:col-span-2">
                        <label for="disk" class="block text-sm font-medium text-gray-400"><%= __('server.edit.disk_label') %></label>
                        <div class="mt-1 flex rounded-xl shadow-sm">
                            <input type="text" name="disk" id="disk" class="transition ease-in-out delay-100 block w-full flex-1 text-white rounded-full bg-white/10 border-white/10 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm px-2 py-1 border placeholder-gray-400 focus:ring-2" placeholder="<%= (packages ? packages.disk : 0)/1024 + extraresources.disk/1024 - disk/1024 + serverinfo.attributes.limits.disk/1024 %>" value="<%= (packages ? packages.disk : 0)/1024 + extraresources.disk/1024 - disk/1024 + serverinfo.attributes.limits.disk/1024 %>">
                        </div>
                    </div>
                </div><br><br>
                <button onclick="submitForm()" class="transition ease-in-out delay-100 group relative flex w-auto justify-center rounded-full border border-transparent py-2 px-4 text-sm font-medium text-white bg-indigo-500 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    <%= __('server.common.apply_changes') %>
                </button>
            </div>
            <script>
                fetch(`/api/server/<%= req.query.id %>`)
                    .then(response => response.json())
                    .then(data => {
                        document.getElementById('server-name').textContent = data.attributes.name;
                        if(document.getElementById('server-name-breadcrumb')) {
                             document.getElementById('server-name-breadcrumb').textContent = data.attributes.name;
                        }
                        document.getElementById('server-description').textContent = data.attributes.description || "<%= __('website.subusers.no_description') %>";
                    })
                    .catch(error => console.error("Failed to fetch server info:", error));

                async function submitForm() {
                    let ram = encodeURIComponent(document.getElementById("ram").value);
                    let disk = encodeURIComponent(document.getElementById("disk").value);
                    let cpu = encodeURIComponent(document.getElementById("cpu").value);
                    document.location.href = `/api/server/<%= id %>/modify?ram=${ram*1024}&disk=${disk*1024}&cpu=${cpu*100}`;
                };
            </script>
        <% } else { %>
            <p class="text-white"><%= __('server.edit.not_found') %></p>
        <% } %>
    <% } else { %>
        <p class="text-white"><%= __('server.edit.missing_id') %></p>
    <% } %>
    </div>
</main>

<%- include('../components/bottom') %>