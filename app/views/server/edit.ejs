<%- include('../components/top') %>
<main class="flex-grow container mx-auto px-4 py-8">
    <%- include('../components/server_header', {
        backButtonText: __('server.settings.back_to_list')
    }) %>      
<div id="alert-container" class="mb-4 space-y-2"></div>
    <% if (req.query.err) { %>
        <div class="mb-6 p-4 rounded-xl bg-red-500/10 border border-red-500/20">
            <div class="flex items-center gap-3">
                 <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                <span class="text-red-500 text-sm font-medium">
                    <%- (() => {
                        switch (req.query.err) {
                            case "LOCATIONLIMITRAM":
                            case "LOCATIONLIMITDISK":
                            case "LOCATIONLIMITCPU":
                                 return `${__('server.create.error_location_limit')} <b>${req.query.num}</b>${req.query.err.slice(-3) === "RAM" ? "MB RAM" : req.query.err.slice(-4) === "DISK" ? "MB disk" : "% CPU"}.`;
                            case "MISSINGVARIABLE":
                                return "Missing required fields.";
                            case "EXCEEDRAM":
                                return "You have exceeded your RAM plan.";
                            case "EXCEEDDISK":
                                return "You have exceeded your Disk plan.";
                            case "EXCEEDCPU":
                                return "You have exceeded your CPU plan.";
                            case "NOTOWNER":
                                return "You do not own this server.";
                            case "MISSINGEGG":
                                return "Could not find egg information for this server.";
                            case "ERRORONMODIFY":
                                return "An error occurred while applying changes via Pterodactyl.";
                            case "INVALIDSERVER":
                                return "The requested server was not found or is invalid.";
                            default:
                                if (req.query.err.startsWith("EXCEED")) return "Resource limit exceeded.";
                                return "An error occurred while updating the server: " + req.query.err;
                        }
                    })() %>
                </span>
            </div>
        </div>
    <% } %>
    <%- include('../components/server') %>

    <div class="max-w-7xl mx-auto">
        <div class="bg-white/5 px-4 py-5 border-b border-white/10 rounded-t-2xl sm:px-6">
            <div class="sm:flex sm:items-start sm:justify-between">
                <div>
                    <h3 class="text-lg leading-6 font-medium text-white"><%= __('server.edit.panel_title') %></h3>
                    <p class="mt-1 text-sm text-gray-300"><%= __('server.edit.panel_subtitle') %></p>
                </div>
            </div>
        </div>
        <div class="bg-white/5 rounded-b-2xl px-4 py-5 sm:px-6 text-gray-300 text-sm">
            <!-- Loading State -->
            <div id="loading-state" class="flex items-center justify-center py-8">
                <svg class="animate-spin h-8 w-8 text-indigo-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                <span class="ml-3 text-white"><%= __('common.loading') || 'Loading...' %></span>
            </div>

            <!-- Error State -->
            <div id="error-state" class="hidden">
                <p class="text-white"><%= __('server.edit.not_found') %></p>
            </div>

            <!-- Edit Form (hidden until loaded) -->
            <div id="edit-form" class="hidden">
                <div class="grid grid-cols-3 gap-6">
                    <div class="col-span-3 sm:col-span-2">
                        <label for="ram" class="block text-sm font-medium text-gray-400"><%= __('server.edit.ram_label') %></label>
                        <div class="mt-1 flex rounded-xl shadow-sm">
                            <input type="text" name="ram" id="ram" class="transition ease-in-out delay-100 block w-full flex-1 text-white rounded-full bg-white/10 border-white/10 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm px-2 py-1 border placeholder-gray-400 focus:ring-2">
                        </div>
                    </div>
                </div><br>

                <div class="grid grid-cols-3 gap-6">
                    <div class="col-span-3 sm:col-span-2">
                        <label for="cpu" class="block text-sm font-medium text-gray-400"><%= __('server.edit.cpu_label') %></label>
                        <div class="mt-1 flex rounded-xl shadow-sm">
                            <input type="text" name="cpu" id="cpu" class="transition ease-in-out delay-100 block w-full flex-1 text-white rounded-full bg-white/10 border-white/10 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm px-2 py-1 border placeholder-gray-400 focus:ring-2">
                        </div>
                    </div>
                </div><br>

                <div class="grid grid-cols-3 gap-6">
                    <div class="col-span-3 sm:col-span-2">
                        <label for="disk" class="block text-sm font-medium text-gray-400"><%= __('server.edit.disk_label') %></label>
                        <div class="mt-1 flex rounded-xl shadow-sm">
                            <input type="text" name="disk" id="disk" class="transition ease-in-out delay-100 block w-full flex-1 text-white rounded-full bg-white/10 border-white/10 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm px-2 py-1 border placeholder-gray-400 focus:ring-2">
                        </div>
                    </div>
                </div><br><br>
                <button onclick="submitForm()" class="transition ease-in-out delay-100 group relative flex w-auto justify-center rounded-full border border-transparent py-2 px-4 text-sm font-medium text-white bg-indigo-500 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    <%= __('server.common.apply_changes') %>
                </button>
            </div>
        </div>
    </div>
</main>

<script>
const serverId = '<%= req.query.id %>';
const numericId = '<%= req.query.numeric %>';
let serverData = null;

async function loadServerData() {
    try {
        const response = await fetch(`/api/server/${serverId}`);
        if (!response.ok) throw new Error('Failed to fetch server');
        
        serverData = await response.json();
        
        document.getElementById('server-name').textContent = serverData.attributes.name;
        if(document.getElementById('server-name-breadcrumb')) {
            document.getElementById('server-name-breadcrumb').textContent = serverData.attributes.name;
        }
        document.getElementById('server-description').textContent = serverData.attributes.description || "<%= __('website.subusers.no_description') %>";
        
        // Current server limits
        const currentRam = serverData.attributes.limits.memory;
        const currentCpu = serverData.attributes.limits.cpu;
        const currentDisk = serverData.attributes.limits.disk;
        
        // Set input values (in GB for ram/disk, vCores for cpu)
        document.getElementById('ram').value = currentRam / 1024;
        document.getElementById('cpu').value = currentCpu / 100;
        document.getElementById('disk').value = currentDisk / 1024;
        
        // Show the form
        document.getElementById('loading-state').classList.add('hidden');
        document.getElementById('edit-form').classList.remove('hidden');
        
    } catch (error) {
        console.error('Error loading server data:', error);
        document.getElementById('loading-state').classList.add('hidden');
        document.getElementById('error-state').classList.remove('hidden');
    }
}

async function submitForm() {
    const ram = parseFloat(document.getElementById('ram').value) * 1024;
    const disk = parseFloat(document.getElementById('disk').value) * 1024;
    const cpu = parseFloat(document.getElementById('cpu').value) * 100;
    
    // Use the numeric ID from the fetched server data if available
    const id = serverData?.attributes?.id || numericId;
    
    window.location.href = `/api/server/${id}/modify?ram=${ram}&disk=${disk}&cpu=${cpu}`;
}

document.addEventListener('DOMContentLoaded', loadServerData);
</script>

<%- include('../components/bottom') %>