<%- include('./components/top') %>

<main class="flex-grow container mx-auto px-4 py-8">
    <%- include('./components/header', {
        title: __('referrals.title'),
        subtitle: __('referrals.subtitle', { name: settings.name }),
        breadcrumbItem: __('referrals.title')
    }) %>
    <div class="max-w-4xl mx-auto mt-5">

        <!-- Notification Messages -->
        <div id="referralMessage" class="rounded-2xl p-4 mb-8 hidden">
            <div class="flex items-center">
                <svg class="h-5 w-5 mr-3" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                </svg>
                <p id="referralMessageText" class="text-sm"></p>
            </div>
        </div>

        <div class="grid gap-8 md:grid-cols-2 mt-5">
            <!-- Create Referral Code -->
            <div class="bg-white/5 rounded-2xl p-6">
                <h2 class="text-xl font-semibold mb-4"><%= __('referrals.create.title') %></h2>
                <form id="generateReferralForm" class="space-y-4">
                    <div>
                        <label for="code" class="block text-sm font-medium text-gray-400 mb-1"><%= __('referrals.create.label') %></label>
                        <input type="text" name="code" id="code" class="w-full px-3 py-2 bg-white/10 border border-white/15 rounded-lg text-white placeholder-gray-500 focus:ring-indigo-500 focus:border-indigo-500" placeholder="<%= __('referrals.create.placeholder') %>">
                    </div>
                    <button type="submit" class="w-full px-4 py-2 bg-indigo-500 text-white rounded-xl font-medium hover:bg-indigo-700 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                        <%= __('referrals.create.button') %>
                    </button>
                </form>
            </div>

            <!-- Claim Referral Code -->
            <div class="bg-white/5 rounded-2xl p-6">
                <h2 class="text-xl font-semibold mb-4"><%= __('referrals.claim.title') %></h2>
                <form id="claimReferralForm" class="space-y-4">
                    <div>
                        <label for="claim-code" class="block text-sm font-medium text-gray-400 mb-1"><%= __('referrals.claim.label') %></label>
                        <input type="text" name="code" id="claim-code" class="w-full px-3 py-2 bg-white/10 border border-white/15 rounded-lg text-white placeholder-gray-500 focus:ring-indigo-500 focus:border-indigo-500" placeholder="<%= __('referrals.claim.placeholder') %>">
                    </div>
                    <button type="submit" class="w-full px-4 py-2 bg-indigo-500 text-white rounded-xl font-medium hover:bg-indigo-700 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                        <%= __('referrals.claim.button') %>
                    </button>
                </form>
            </div>
        </div>

        <!-- Referral Benefits -->
        <div class="mt-8 bg-white/5 rounded-2xl p-6">
            <h2 class="text-xl font-semibold mb-4"><%= __('referrals.benefits.title') %></h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="rounded-2xl border-white/5 border p-6">
                    <h3 class="text-lg font-medium mb-2"><%= __('referrals.benefits.for_you') %></h3>
                    <p class="text-3xl font-bold text-indigo-400"><%= settings.api.client.coins.referral.owner %> <%= settings.website.currency %></p>
                    <p class="text-gray-400 mt-2"><%= __('referrals.benefits.you_earn') %></p>
                </div>
                <div class="rounded-2xl border-white/5 border p-6">
                    <h3 class="text-lg font-medium mb-2"><%= __('referrals.benefits.for_friend') %></h3>
                    <p class="text-3xl font-bold text-indigo-400"><%= settings.api.client.coins.referral.referee %> <%= settings.website.currency %></p>
                    <p class="text-gray-400 mt-2"><%= __('referrals.benefits.friend_earns') %></p>
                </div>
            </div>
        </div>
    </div>
</main>

<script>
const messageBox = document.getElementById('referralMessage');
const messageText = document.getElementById('referralMessageText');
const referralSVG = messageBox.querySelector('svg');

function showMessage(message, type) {
    // type = 'success' | 'error'
    messageBox.className = `rounded-2xl p-4 mt-4 ${type === 'success' ? 'bg-green-800/50' : 'bg-red-800/50'}`;
    messageText.className = `text-sm ${type === 'success' ? 'text-green-400' : 'text-red-400'}`;
    referralSVG.className = `h-5 w-5 mr-3 ${type === 'success' ? 'text-green-400' : 'text-red-400'}`;
    messageText.textContent = message;
    messageBox.classList.remove('hidden');
}

// Create Referral Code
document.getElementById('generateReferralForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    const codeInput = document.getElementById('code');
    const code = codeInput.value.trim();
    if(!code) return showMessage('<%= __("referrals.messages.enter_code") %>', 'error');

    try {
        const res = await fetch(`/api/referrals/generate?code=${encodeURIComponent(code)}`, { method: 'GET', headers: { 'Accept': 'application/json' } });
        const data = await res.json();
        if(res.ok) {
            const tpl = '<%= __("referrals.messages.code_created", { message: "__MSG__", code: "__CODE__" }) %>';
            const msg = tpl.replace('__MSG__', data.message).replace('__CODE__', data.code);
            showMessage(msg, 'success');
        }
        else showMessage(data.error || '<%= __("referrals.messages.error_occurred") %>', 'error');
    } catch(err) {
        showMessage('<%= __("referrals.messages.network_error") %>', 'error');
    }
});

// Claim Referral Code
document.getElementById('claimReferralForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    const codeInput = document.getElementById('claim-code');
    const code = codeInput.value.trim();
    if(!code) return showMessage('<%= __("referrals.messages.enter_claim_code") %>', 'error');

    try {
        const res = await fetch(`/api/referrals/claim?code=${encodeURIComponent(code)}`, { method: 'GET', headers: { 'Accept': 'application/json' } });
        const data = await res.json();
        if(res.ok) showMessage(data.message, 'success');
        else showMessage(data.error || '<%= __("referrals.messages.error_occurred") %>', 'error');
    } catch(err) {
        showMessage('<%= __("referrals.messages.network_error") %>', 'error');
    }
});
</script>


<%- include('./components/bottom') %>