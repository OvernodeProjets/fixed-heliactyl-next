<%- include('./components/top') %>
<!-- Main Content -->
<main class="flex-grow container mx-auto px-4 py-8">
    <%- include('./components/header', {
        title: __('account.title'),
        subtitle: __('account.subtitle'),
        breadcrumbItem: __('breadcrumbs.user_credentials')
    }) %>

    <!-- Credentials Content -->
    <div class="mt-12 flex justify-center">
        <div class="text-center w-full max-w-md">
            <div class="mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 bg-white/5 p-1.5 rounded-xl border border-white/10 mx-auto text-gray-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
                </svg>
            </div>
            <h2 class="text-2xl font-bold mb-4"><%= __('account.user_credentials') %></h2>
            <p class="text-gray-400 mb-6"><%= __('account.description') %></p>

            <!-- Current Credentials -->
            <div class="mb-8">
                <div class="mb-4">
                    <input value="<%= req.session.userinfo.email %>" class="transition ease-in-out delay-100 shadow-sm block w-full sm:text-sm rounded-lg bg-white/5 text-white border-white/5 focus:ring-indigo-500 focus:border-indigo-500 px-2 py-1 border placeholder-gray-400 focus:ring-2" disabled>
                </div>
                <div class="mb-4 relative">
                    <input id="current-password" value="<%= req.session.password ? req.session.password : __('account.messages.no_password') %>" class="transition ease-in-out delay-100 shadow-sm block w-full placeholder-white/60 sm:text-sm rounded-lg bg-white/5 text-white border-white/5 focus:ring-indigo-500 focus:border-indigo-500 px-2 py-1 border placeholder-gray-400 focus:ring-2" disabled>
                </div>
            </div>

            <!-- Password Change Section -->
            <div class="border-t border-white/15 pt-8">
                <h3 class="text-lg font-semibold mb-4"><%= __('account.new_password.title') %></h3>
                <form id="password-change-form" class="space-y-4">
                    <div>
                        <input type="password" id="new-password" placeholder="<%= __('account.new_password.placeholder_new') %>" class="transition ease-in-out delay-100 shadow-sm block w-full sm:text-sm rounded-lg bg-white/5 placeholder-white/60 text-white border-white/5 focus:ring-indigo-500 focus:border-indigo-500 px-2 py-1 border placeholder-gray-400 focus:ring-2">
                    </div>
                    <div>
                        <input type="password" id="confirm-password" placeholder="<%= __('account.new_password.placeholder_confirm') %>" class="transition ease-in-out delay-100 shadow-sm block w-full sm:text-sm rounded-lg placeholder-white/60 bg-white/5 text-white border-white/5 focus:ring-indigo-500 focus:border-indigo-500 px-2 py-1 border placeholder-gray-400 focus:ring-2">
                    </div>
                    <p class="text-sm text-white/70 text-left py-2.5">
                        <%= __('account.new_password.requirements') %>
                        <br>• <%= __('account.new_password.requirement_length') %>
                        <br>• <%= __('account.new_password.requirement_uppercase') %>
                        <br>• <%= __('account.new_password.requirement_lowercase') %>
                        <br>• <%= __('account.new_password.requirement_number') %>
                    </p>
                    <div class="flex justify-between gap-4 mt-6">
                        <button type="button" onclick="window.location.href='../api/password/generate'" class="flex-1 font-medium bg-white/15 text-sm hover:scale-95 text-white px-4 py-2 rounded-xl hover:bg-white/20 transition">
                            <%= __('account.new_password.button_generate') %>
                        </button>
                        <button type="submit" class="flex-1 font-medium bg-indigo-500 text-white px-4 py-2 rounded-xl text-sm hover:scale-95 hover:bg-indigo-600 transition">
                            <%= __('account.new_password.button_set') %>
                        </button>
                    </div>
                </form>
            </div>

            <div id="status-message" class="mt-4 hidden">
                <p class="text-sm font-medium rounded-full px-4 py-2"></p>
            </div>
        </div>
    </div>
</main>

<script>
    function copyPassword() {
        const passwordInput = document.getElementById('current-password');
        navigator.clipboard.writeText(passwordInput.value);
        showStatus('<%= __('account.messages.password_copied') %>', 'success');
    }

    function showStatus(message, type) {
        const statusDiv = document.getElementById('status-message');
        const statusText = statusDiv.querySelector('p');
        statusDiv.classList.remove('hidden');
        statusText.textContent = message;
        
        if (type === 'success') {
            statusText.classList.add('bg-green-100', 'text-green-800');
            statusText.classList.remove('bg-red-100', 'text-red-800');
        } else {
            statusText.classList.add('bg-red-100', 'text-red-800');
            statusText.classList.remove('bg-green-100', 'text-green-800');
        }

        setTimeout(() => {
            statusDiv.classList.add('hidden');
        }, 3000);
    }

    document.getElementById('password-change-form').addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const newPassword = document.getElementById('new-password').value;
        const confirmPassword = document.getElementById('confirm-password').value;

        try {
            const response = await fetch('/api/password/change', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    password: newPassword,
                    confirmPassword: confirmPassword
                })
            });

            const data = await response.json();

            if (response.ok) {
                showStatus('<%= __("account.messages.password_updated") %>', 'success');
                setTimeout(() => window.location.reload(), 1500);
            } else {
                showStatus(data.error, 'error');
            }
        } catch (error) {
            showStatus('<%= __("account.messages.error_occurred") %>', 'error');
        }
    });
</script>

<%- include('./components/bottom') %>