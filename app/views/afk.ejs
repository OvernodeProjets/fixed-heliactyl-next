<%- include('./components/top') %>
<!-- Main Content -->
<main class="flex-grow container mx-auto px-4 py-8">
    <%- include('./components/header', {
        title: __('afk.title'),
        subtitle: __('afk.subtitle'),
        breadcrumbItem: __('breadcrumbs.afk_page')
    }) %>

    <!-- AFK Page Content -->
    <div class="mt-8">
        <!-- Status Card - Full width on top -->
        <div id="statusCard" class="w-full max-w-4xl mx-auto p-4 rounded-xl bg-white/5 border border-white/10 mb-6">
            <div class="flex items-center justify-between">
                <h2 class="text-lg font-semibold text-white"><%= __('afk.connection_status.title') %></h2>
                <span id="connectionStatus" class="px-3 py-1 rounded-full text-sm font-medium bg-zinc-700 text-zinc-300">
                    <%= __('afk.connection_status.connecting') %>
                </span>
            </div>
            <div id="errorMessage" class="hidden text-red-400 text-sm mt-2"></div>
        </div>

        <!-- Main Grid - 2 columns on lg, 1 on mobile -->
        <div class="max-w-4xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-6">
            <!-- Left Column -->
            <div class="space-y-6">
                <!-- Party Boost Card -->
                <div id="partyBoostCard" class="p-5 rounded-xl bg-white/5 border border-white/10 relative overflow-hidden">
                    <!-- Animated background when active -->
                    <div id="partyBoostGlow" class="absolute inset-0 opacity-0 transition-opacity duration-500"></div>
                    
                    <div class="relative z-10">
                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center space-x-3">
                                <div id="partyBoostIcon" class="p-2 rounded-lg bg-indigo-500/20">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="size-5 text-indigo-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                        <circle cx="9" cy="7" r="4"></circle>
                                        <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                                        <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                                    </svg>
                                </div>
                                <div>
                                    <h2 class="text-base font-semibold text-white">Party Boost</h2>
                                    <p id="partyBoostStatus" class="text-xs text-zinc-400">Waiting...</p>
                                </div>
                            </div>
                            <div id="multiplierBadge" class="px-3 py-1.5 rounded-lg bg-zinc-700/50 text-zinc-300 font-bold text-base transition-all duration-300">
                                x1.0
                            </div>
                        </div>

                        <!-- Active Users Display -->
                        <div class="flex items-center justify-between p-3 rounded-lg bg-white/5 mb-3">
                            <div class="flex items-center space-x-2">
                                <div class="flex -space-x-2" id="userAvatars">
                                    <div class="w-7 h-7 rounded-full bg-zinc-600 border-2 border-zinc-800 flex items-center justify-center">
                                        <svg class="w-3.5 h-3.5 text-zinc-400" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"></path>
                                        </svg>
                                    </div>
                                </div>
                                <span class="text-xs text-zinc-300">Active users</span>
                            </div>
                            <span id="activeUsersCount" class="text-base font-bold text-white">1</span>
                        </div>

                        <!-- Next Threshold Progress -->
                        <div id="nextThresholdContainer" class="p-3 rounded-lg bg-white/5">
                            <div class="flex items-center justify-between mb-1.5">
                                <span class="text-xs text-zinc-400">Next threshold</span>
                                <span id="nextThresholdInfo" class="text-xs text-indigo-400 font-medium">+2 users â†’ x1.1</span>
                            </div>
                            <div class="w-full h-1.5 rounded-full bg-zinc-700 overflow-hidden">
                                <div id="thresholdProgress" class="h-full rounded-full bg-indigo-500 transition-all duration-500" style="width: 0%"></div>
                            </div>
                        </div>

                        <!-- Thresholds List (collapsible) -->
                        <div class="mt-3">
                            <button id="toggleThresholds" class="w-full flex items-center justify-between p-2 rounded-lg hover:bg-white/5 transition-colors text-xs text-zinc-400">
                                <span>View all thresholds</span>
                                <svg id="thresholdsChevron" class="w-3.5 h-3.5 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                </svg>
                            </button>
                            <div id="thresholdsList" class="hidden mt-2 space-y-1.5 text-xs">
                                <!-- Thresholds will be populated dynamically -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column -->
            <div class="space-y-6">
                <!-- Rewards Card -->
                <div class="p-5 rounded-xl bg-white/5 border border-white/10">
                    <h2 class="text-base font-semibold text-white mb-4"><%= __('afk.rewards.title') %></h2>

                    <!-- Rate Display -->
                    <div class="flex items-center justify-between mb-3 p-3 rounded-lg bg-white/5">
                        <div class="flex items-center space-x-2">
                            <svg xmlns="http://www.w3.org/2000/svg" class="size-4 text-indigo-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
                            </svg>
                            <div>
                                <span class="text-xs text-zinc-300"><%= __('afk.rewards.earning_rate') %></span>
                                <div id="baseRateInfo" class="text-[10px] text-zinc-500 hidden">Base: <span id="baseRate">1</span>/min</div>
                            </div>
                        </div>
                        <div class="text-right">
                            <span id="earningRate" class="text-base font-bold text-white">1 <%= settings.website.currency %>/min</span>
                            <div id="boostIndicator" class="hidden text-[10px] text-indigo-400">ðŸš€ Boosted!</div>
                        </div>
                    </div>

                    <!-- Timer -->
                    <div class="flex items-center justify-between p-3 rounded-lg bg-white/5">
                        <div class="flex items-center space-x-2">
                            <svg xmlns="http://www.w3.org/2000/svg" class="size-4 text-indigo-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="10"></circle>
                                <polyline points="12 6 12 12 16 14"></polyline>
                            </svg>
                            <span class="text-xs text-zinc-300"><%= __('afk.rewards.next_reward') %></span>
                        </div>
                        <div class="flex items-center space-x-2">
                            <div id="rewardProgress" class="w-14 h-1.5 rounded-full bg-zinc-700 overflow-hidden">
                                <div id="rewardProgressBar" class="h-full rounded-full bg-indigo-500 transition-all duration-1000" style="width: 0%"></div>
                            </div>
                            <span id="countdown" class="text-sm font-medium text-white w-8 text-right">-</span>
                        </div>
                    </div>
                </div>

                <!-- Statistics Card -->
                <div class="p-5 rounded-xl bg-white/5 border border-white/10">
                    <h2 class="text-base font-semibold text-white mb-4"><%= __('afk.statistics.title') %></h2>
                    <div class="grid grid-cols-2 gap-3">
                        <div class="p-3 rounded-lg bg-white/5">
                            <div class="text-xs text-zinc-300 mb-1"><%= __('afk.statistics.time_active') %></div>
                            <div id="timeActive" class="text-base font-medium text-white">0m 0s</div>
                        </div>
                        <div class="p-3 rounded-lg bg-white/5">
                            <div class="text-xs text-zinc-300 mb-1">Earned</div>
                            <div id="totalEarned" class="text-base font-medium text-emerald-400">+0 <%= settings.website.currency %></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<script>
document.addEventListener('DOMContentLoaded', function() {
    let ws;
    let sessionStart = Date.now();
    let totalEarned = 0;
    let updateInterval;
    let reconnectAttempts = 0;
    let currentIntervalMs = 60000;
    let lastState = null;
    const MAX_RECONNECT_ATTEMPTS = 10;
    const RECONNECT_DELAY = 10000;

    function formatTime(ms) {
        const seconds = Math.floor(ms / 1000);
        const minutes = Math.floor(seconds / 60);
        const hours = Math.floor(minutes / 60);
        const remainingMinutes = minutes % 60;
        const remainingSeconds = seconds % 60;
        if (hours > 0) {
            return `${hours}h ${remainingMinutes}m ${remainingSeconds}s`;
        }
        return `${remainingMinutes}m ${remainingSeconds}s`;
    }

    function updateSessionStats() {
        const timeActive = Date.now() - sessionStart;
        document.getElementById('timeActive').textContent = formatTime(timeActive);
        document.getElementById('totalEarned').textContent = `+${totalEarned.toFixed(2)} <%= settings.website.currency %>`;
    }

    function updateConnectionStatus(status, isError = false) {
        const statusElement = document.getElementById('connectionStatus');
        const errorElement = document.getElementById('errorMessage');
        
        if (isError) {
            statusElement.className = 'px-3 py-1 rounded-full text-sm font-medium bg-red-900/50 text-red-300';
            statusElement.textContent = '<%= __("afk.connection_status.disconnected") %>';
            errorElement.textContent = status;
            errorElement.classList.remove('hidden');
        } else {
            statusElement.className = status === '<%= __("afk.connection_status.connected") %>' 
                ? 'px-3 py-1 rounded-full text-sm font-medium bg-indigo-600/50 text-indigo-300'
                : 'px-3 py-1 rounded-full text-sm font-medium bg-zinc-700 text-zinc-300';
            statusElement.textContent = status;
            errorElement.classList.add('hidden');
        }
    }

    function updatePartyBoostUI(data) {
        const partyBoost = data.partyBoost || {
            enabled: false,
            presenceCount: data.presenceCount || 1,
            multiplier: data.multiplier || 1,
            active: data.partyModeActive || false,
            thresholds: data.thresholds || [],
            nextThreshold: null
        };

        const card = document.getElementById('partyBoostCard');
        const multiplierBadge = document.getElementById('multiplierBadge');
        const activeUsersCount = document.getElementById('activeUsersCount');
        const partyBoostStatus = document.getElementById('partyBoostStatus');
        const boostIndicator = document.getElementById('boostIndicator');
        const baseRateInfo = document.getElementById('baseRateInfo');
        const baseRate = document.getElementById('baseRate');

        // Update multiplier badge
        multiplierBadge.textContent = `x${partyBoost.multiplier.toFixed(2)}`;
        
        // Update active users count
        activeUsersCount.textContent = partyBoost.presenceCount;

        // Update user avatars (show up to 5)
        const avatarsContainer = document.getElementById('userAvatars');
        const avatarCount = Math.min(partyBoost.presenceCount, 5);
        avatarsContainer.innerHTML = '';
        for (let i = 0; i < avatarCount; i++) {
            const colors = ['bg-indigo-500', 'bg-indigo-400', 'bg-blue-500', 'bg-cyan-500', 'bg-teal-500'];
            avatarsContainer.innerHTML += `
                <div class="w-8 h-8 rounded-full ${colors[i]} border-2 border-zinc-800 flex items-center justify-center" style="margin-left: ${i > 0 ? '-8px' : '0'}">
                    <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"></path>
                    </svg>
                </div>
            `;
        }
        if (partyBoost.presenceCount > 5) {
            avatarsContainer.innerHTML += `
                <div class="w-8 h-8 rounded-full bg-zinc-600 border-2 border-zinc-800 flex items-center justify-center text-xs text-white font-bold" style="margin-left: -8px">
                    +${partyBoost.presenceCount - 5}
                </div>
            `;
        }

        // Toggle party active state with Tailwind classes
        const partyBoostGlow = document.getElementById('partyBoostGlow');
        if (partyBoost.active) {
            // Active state - add indigo glow
            card.classList.remove('border-white/10');
            card.classList.add('border-indigo-500/30');
            multiplierBadge.classList.remove('bg-zinc-700/50', 'text-zinc-300');
            multiplierBadge.classList.add('bg-indigo-500/30', 'text-white');
            partyBoostGlow.classList.remove('opacity-0');
            partyBoostGlow.classList.add('opacity-100', 'bg-indigo-500/10', 'animate-pulse');
            partyBoostStatus.textContent = `ðŸŽ‰ Party Boost active! (+${((partyBoost.multiplier - 1) * 100).toFixed(0)}% bonus)`;
            partyBoostStatus.className = 'text-xs text-indigo-400 font-medium';
            boostIndicator.classList.remove('hidden');
            baseRateInfo.classList.remove('hidden');
            baseRate.textContent = data.baseCoinsPerMinute;
        } else {
            // Inactive state - reset to neutral
            card.classList.add('border-white/10');
            card.classList.remove('border-indigo-500/30');
            multiplierBadge.classList.add('bg-zinc-700/50', 'text-zinc-300');
            multiplierBadge.classList.remove('bg-indigo-500/30', 'text-white');
            partyBoostGlow.classList.add('opacity-0');
            partyBoostGlow.classList.remove('opacity-100', 'bg-indigo-500/10', 'animate-pulse');
            partyBoostStatus.textContent = partyBoost.enabled ? 'Invite more friends to boost!' : 'Disabled';
            partyBoostStatus.className = 'text-xs text-zinc-400';
            boostIndicator.classList.add('hidden');
            baseRateInfo.classList.add('hidden');
        }

        // Update next threshold
        const nextThresholdContainer = document.getElementById('nextThresholdContainer');
        const nextThresholdInfo = document.getElementById('nextThresholdInfo');
        const thresholdProgress = document.getElementById('thresholdProgress');

        if (partyBoost.nextThreshold) {
            nextThresholdContainer.classList.remove('hidden');
            nextThresholdInfo.textContent = `+${partyBoost.nextThreshold.usersNeeded} users â†’ x${partyBoost.nextThreshold.nextMultiplier}`;
            
            // Calculate progress to next threshold
            const currentThresholdIndex = partyBoost.thresholds.findIndex(t => t[0] > partyBoost.presenceCount) - 1;
            const prevThreshold = currentThresholdIndex >= 0 ? partyBoost.thresholds[currentThresholdIndex][0] : 0;
            const nextThreshold = partyBoost.nextThreshold.atUsers;
            const progress = ((partyBoost.presenceCount - prevThreshold) / (nextThreshold - prevThreshold)) * 100;
            thresholdProgress.style.width = `${Math.min(100, Math.max(0, progress))}%`;
        } else {
            nextThresholdContainer.classList.add('hidden');
        }

        // Update thresholds list
        const thresholdsList = document.getElementById('thresholdsList');
        thresholdsList.innerHTML = partyBoost.thresholds.map(([users, mult]) => `
            <div class="flex items-center justify-between p-2 rounded ${partyBoost.presenceCount >= users ? 'bg-indigo-500/20 text-indigo-300' : 'bg-white/5 text-zinc-400'}">
                <span>${users}+ users</span>
                <span class="font-medium">x${mult}</span>
            </div>
        `).join('');
    }

    // Toggle thresholds list
    document.getElementById('toggleThresholds').addEventListener('click', () => {
        const list = document.getElementById('thresholdsList');
        const chevron = document.getElementById('thresholdsChevron');
        list.classList.toggle('hidden');
        chevron.style.transform = list.classList.contains('hidden') ? '' : 'rotate(180deg)';
    });

    let isConnecting = false;
    let reconnectTimeout = null;

    function connect() {
        if (isConnecting) {
            console.log('[AFK] Connection attempt already in progress');
            return;
        }

        if (ws && ws.readyState !== WebSocket.CLOSED) {
            console.log('[AFK] Closing existing connection');
            ws.close();
            return;
        }

        isConnecting = true;
        if (reconnectTimeout) {
            clearTimeout(reconnectTimeout);
            reconnectTimeout = null;
        }

        const protocol = window.location.protocol === 'https:' ? 'wss:' : 'ws:';
        ws = new WebSocket(`${protocol}//${window.location.host}/api/afk/ws`);

        ws.onopen = () => {
            console.log('[AFK] Connected to server');
            updateConnectionStatus('<%= __("afk.connection_status.connected") %>');
            reconnectAttempts = 0;
            isConnecting = false;
            sessionStart = Date.now();
            totalEarned = 0;
            setInterval(updateSessionStats, 1000);
        };

        ws.onclose = (event) => {
            console.log(`[AFK] Disconnected from server: ${event.code}`);
            isConnecting = false;

            if (event.code === 4002) {
                updateConnectionStatus('<%= __("afk.connection_status.already_open") %>', true);
            } else if (event.code === 4001) {
                updateConnectionStatus('<%= __("afk.connection_status.session_expired") %>', true);
            } else {
                updateConnectionStatus('<%= __("afk.connection_status.disconnected") %>', true);

                if (reconnectAttempts < MAX_RECONNECT_ATTEMPTS) {
                    reconnectAttempts++;
                    updateConnectionStatus(`<%= __("afk.connection_status.reconnecting", { attempt: "${reconnectAttempts}", max: "${MAX_RECONNECT_ATTEMPTS}" }) %>`);
                    reconnectTimeout = setTimeout(() => {
                        if (!isConnecting) {
                            connect();
                        }
                    }, RECONNECT_DELAY);
                } else {
                    updateConnectionStatus('<%= __("afk.connection_status.connection_failed") %>', true);
                }
            }

            clearInterval(updateInterval);
        };

        ws.onerror = (error) => {
            console.error('[AFK] WebSocket error:', error);
        };

        ws.onmessage = (event) => {
            try {
                const data = JSON.parse(event.data);
                if (data.type === 'afk_state') {
                    const currentCoinsPerMinute = data.coinsPerMinute;
                    currentIntervalMs = data.intervalMs || 60000;

                    // Detect if a reward was just granted (nextRewardIn reset to near intervalMs)
                    if (lastState && data.nextRewardIn > lastState.nextRewardIn + 5000) {
                        // Reward was granted! Add to total
                        totalEarned += currentCoinsPerMinute;
                        updateSessionStats();
                    }
                    
                    lastState = data;

                    // Update earning rate
                    document.getElementById('earningRate').textContent = 
                        `${currentCoinsPerMinute.toFixed(2)} <%= settings.website.currency %>/min`;

                    // Update Party Boost UI
                    updatePartyBoostUI(data);

                    // Update countdown display
                    const seconds = Math.max(0, Math.ceil(data.nextRewardIn / 1000));
                    document.getElementById('countdown').textContent = `${seconds}s`;
                    
                    // Update progress bar
                    const progress = ((currentIntervalMs - data.nextRewardIn) / currentIntervalMs) * 100;
                    document.getElementById('rewardProgressBar').style.width = `${Math.min(100, progress)}%`;
                }
            } catch (error) {
                console.error('[AFK] Failed to parse message:', error);
            }
        };
    }

    // Start connection when page loads
    connect();

    // Handle page visibility changes
    document.addEventListener('visibilitychange', () => {
        if (document.hidden) {
            console.log('[AFK] Page hidden');
        } else {
            console.log('[AFK] Page visible, checking connection');
            if (!ws || ws.readyState !== WebSocket.OPEN) {
                connect();
            }
        }
    });
});
</script>

<%- include('./components/bottom') %>