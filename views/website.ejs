<!DOCTYPE html>
<%
const locationCount = Object.keys(settings.api.client.locations).length;
const firstLocation = locationCount === 1 ? Object.values(settings.api.client.locations)[0] : null;
%>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= settings.name %></title>
    <link rel="stylesheet" href="assets/tailwind.css">
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; }
        .gradient-blur {
            background: radial-gradient(circle at top right, rgba(79, 70, 229, 0.08) 0%, transparent 60%);
        }
        @keyframes float {
            0% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
            100% { transform: translateY(0px); }
        }
        .float-animation {
            animation: float 6s ease-in-out infinite;
        }
        @font-face {
            font-family: 'Ndot-55';
            src: url('/assets/Ndot-55.otf') format('opentype');
            font-weight: normal;
            font-display: swap;
        }
        .heavy {
            font-family: 'Ndot-55', sans-serif;
            font-weight: 900;
            text-transform: uppercase;
        }
    </style>
</head>
<body class="bg-white">
    <!-- Navbar -->
    <header x-data="{ isOpen: false }" class="fixed top-0 w-full z-50">
        <div class="absolute inset-0 bg-gray-200/20 backdrop-blur border border-black/5 shadow-sm rounded-b-3xl"></div>
        <nav class="relative mx-auto max-w-7xl px-6 lg:px-8 py-4 z-50">
            <div class="flex items-center justify-between">
                <div class="flex lg:flex-1">
                    <a href="#" class="flex items-center">
                        <img src="/assets/logo-text.png" class="h-10" alt="<%= settings.name %> Logo">
                    </a>
                </div>
                
                <div class="hidden lg:flex lg:gap-x-12">
                    <a href="#features" class="text-sm font-semibold text-gray-900 hover:text-indigo-900">Features</a>
                    <a href="#pricing" class="text-sm font-semibold text-gray-900 hover:text-indigo-900">Pricing</a>
                    <a href="<%= settings.website.status %>" class="text-sm font-semibold text-gray-900 hover:text-indigo-900">Status</a>
                    <a href="<%= settings.website.discord %>" class="text-sm font-semibold text-gray-900 hover:text-indigo-900">Discord</a>
                </div>

                <div class="hidden lg:flex lg:flex-1 lg:justify-end">
                    <a href="/auth" class="rounded-lg bg-gray-950 px-4 py-2 text-sm font-semibold text-white hover:bg-gray-800">
                        Get started
                    </a>
                </div>

                <button @click="isOpen = !isOpen" class="lg:hidden p-2 text-gray-700">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-16 6h16"/>
                    </svg>
                </button>
            </div>

            <!-- Mobile menu -->
            <div x-show="isOpen" class="lg:hidden absolute top-full left-0 w-full bg-white shadow-lg rounded-b-xl">
                <div class="px-4 py-6 space-y-4">
                    <a href="#features" class="block text-sm font-semibold text-gray-900">Features</a>
                    <a href="#pricing" class="block text-sm font-semibold text-gray-900">Pricing</a>
                    <a href="<%= settings.website.status %>" class="block text-sm font-semibold text-gray-900">Status</a>
                    <a href="<%= settings.website.discord %>" class="block text-sm font-semibold text-gray-900">Discord</a>
                    <a href="/auth" class="block w-full text-center rounded-lg bg-gray-950 px-4 py-2 text-sm font-semibold text-white">
                        Get started
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <!-- Hero Section -->
    <section class="relative pt-48 pb-32 overflow-hidden">
        <div class="mx-auto max-w-7xl px-6 lg:px-8">
            <div class="mx-auto max-w-2xl text-center">
                <div class="mb-8 inline-flex items-center rounded-full px-4 py-1">
                    <span class="text-sm font-medium text-gray-900">Game servers hosting by <%= settings.name %></span>
                </div>
                <h1 class="heavy text-5xl sm:text-6xl font-bold tracking-tight text-gray-900">
                    Game servers.<br>Made simple.
                </h1>
                <p class="mt-6 text-lg leading-8 text-gray-600">
                    Deploy your game servers instantly <% if (locationCount === 1) { %>in <%= firstLocation.country %><% } else { %>across <%= locationCount %> locations<% } %>. Powered by <%= settings.name %>'s enterprise infrastructure.
                </p>
                <div class="mt-10 flex items-center justify-center gap-x-6">
                    <a href="/auth" class="rounded-lg bg-gray-950 px-6 py-3 text-sm font-semibold text-white hover:bg-gray-800">
                        Get started
                    </a>
                </div>
            </div>
            <img src="<%= settings.website.previewImage %>" alt="Platform Preview" class="mt-16 rounded-xl shadow-xl ring-1 ring-gray-900/10">
        </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="py-24 bg-gray-50">
        <div class="mx-auto max-w-7xl px-6 lg:px-8">
            <div class="mx-auto max-w-2xl text-center">
                <h2 class="heavy text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
                    Everything you need to scale
                </h2>
                <p class="mt-6 text-lg leading-8 text-gray-600">
                    Built for developers who need reliable infrastructure without the complexity
                </p>
            </div>
            <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
                <dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3">
                    <div class="flex flex-col">
                        <dt class="text-base font-semibold leading-7 text-gray-900">
                            <div class="mb-6 flex h-10 w-10 items-center justify-center rounded-lg bg-indigo-600">
                                <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path d="M5 12h14M12 5l7 7-7 7"/>
                                </svg>
                            </div>
                            Low Latency Network
                        </dt>
                        <dd class="mt-1 flex flex-auto flex-col text-base leading-7 text-gray-600">
                            <p class="flex-auto">Premium infrastructure with ultra-low latency for optimal gaming experience</p>
                        </dd>
                    </div>
                    <div class="flex flex-col">
                        <dt class="text-base font-semibold leading-7 text-gray-900">
                            <div class="mb-6 flex h-10 w-10 items-center justify-center rounded-lg bg-indigo-600">
                                <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                                </svg>
                            </div>
                            Enterprise Security
                        </dt>
                        <dd class="mt-1 flex flex-auto flex-col text-base leading-7 text-gray-600">
                            <p class="flex-auto">Built-in DDoS protection and monitoring</p>
                        </dd>
                    </div>
                    <div class="flex flex-col">
                        <dt class="text-base font-semibold leading-7 text-gray-900">
                            <div class="mb-6 flex h-10 w-10 items-center justify-center rounded-lg bg-indigo-600">
                                <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                                </svg>
                            </div>
                            Instant Deployment
                        </dt>
                        <dd class="mt-1 flex flex-auto flex-col text-base leading-7 text-gray-600">
                            <p class="flex-auto">Get your game server up and running in seconds with our automated deployment system</p>
                        </dd>
                    </div>
                </dl>
            </div>
        </div>
    </section>

    <!-- Pricing Section -->
    <section id="pricing" class="py-24">
        <div class="mx-auto max-w-7xl px-6 lg:px-8">
            <div class="mx-auto max-w-2xl sm:text-center">
                <h2 class="heavy text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Simple, transparent pricing</h2>
                <p class="mt-6 text-lg leading-8 text-gray-600">
                    No credit card required. No hidden fees. Just free, forever.
                </p>
            </div>
            <div class="mx-auto mt-16 max-w-2xl rounded-3xl ring-1 ring-gray-200 sm:mt-20 lg:mx-0 lg:flex lg:max-w-none">
                <div class="p-8 sm:p-10 lg:flex-auto">
                    <h3 class="text-2xl font-bold tracking-tight text-gray-900">Free Plan</h3>
                    <p class="mt-6 text-base leading-7 text-gray-600">
                        Everything you need to build and scale your applications
                    </p>
                    <div class="mt-10 flex items-center gap-x-4">
                        <h4 class="flex-none text-sm font-semibold leading-6 text-indigo-600">What's included</h4>
                        <div class="h-px flex-auto bg-gray-100"></div>
                    </div>
                    <ul role="list" class="mt-8 grid grid-cols-1 gap-4 text-sm leading-6 text-gray-600 sm:grid-cols-2 sm:gap-6">
                        <li class="flex gap-x-3">
                            <svg class="h-6 w-5 flex-none text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                            2GB default RAM + 1 CPU core
                        </li>
                        <li class="flex gap-x-3">
                            <svg class="h-6 w-5 flex-none text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                            <% if (locationCount === 1) { %><%= firstLocation.country %><% } else { %><%= locationCount %> Locations<% } %>
                        </li>
                        <li class="flex gap-x-3">
                            <svg class="h-6 w-5 flex-none text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                            DDoS protection
                        </li>
                        <li class="flex gap-x-3">
                            <svg class="h-6 w-5 flex-none text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                            24/7* Uptime
                        </li>
                    </ul>
                </div>
                <div class="-mt-2 p-2 lg:mt-0 lg:w-full lg:max-w-md lg:flex-shrink-0">
                    <div class="rounded-2xl bg-gray-50 py-10 text-center ring-1 ring-inset ring-gray-900/5 lg:flex lg:flex-col lg:justify-center lg:py-16">
                        <div class="mx-auto max-w-xs px-8">
                            <p class="text-base font-semibold text-gray-600">Always free</p>
                            <p class="mt-6 flex items-baseline justify-center gap-x-2">
                                <span class="text-5xl font-bold tracking-tight text-gray-900">$0</span>
                                <span class="text-sm font-semibold leading-6 tracking-wide text-gray-600">forever</span>
                            </p>
                            <a href="/auth" class="mt-10 block w-full rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 transition hover:scale-95 focus-visible:outline-indigo-600">
                                Get started
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-indigo-950" aria-labelledby="footer-heading">
        <h2 id="footer-heading" class="sr-only">Footer</h2>
        <div class="mx-auto max-w-7xl px-6 pb-8 pt-16 sm:pt-24 lg:px-8 lg:pt-32">
            <div class="xl:grid xl:grid-cols-3 xl:gap-8">
                <div class="space-y-8">
                    <img class="h-12 invert" src="/assets/logo-text.png" alt="<%= settings.name %> Logo">
                    <p class="text-sm leading-6 text-gray-300">
                        <%= settings.name %> has been created to provide game servers hosting <% if (locationCount === 1) { %>in <%= firstLocation.country %><% } else { %>across <%= locationCount %> locations<% } %>.
                    </p>
                    <div class="flex space-x-6">
                        <a href="<%= settings.website.discord %>" class="text-white/70 hover:text-white transition">
                            <span class="sr-only">Discord</span>
                            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                <path d="M20.317 4.492c-1.53-.69-3.17-1.2-4.885-1.49a.075.075 0 0 0-.079.036c-.21.369-.444.85-.608 1.23a18.566 18.566 0 0 0-5.487 0 12.36 12.36 0 0 0-.617-1.23A.077.077 0 0 0 8.562 3c-1.714.29-3.354.8-4.885 1.491a.07.07 0 0 0-.032.027C.533 9.093-.32 13.555.099 17.961a.08.08 0 0 0 .031.055 20.03 20.03 0 0 0 5.993 2.98.078.078 0 0 0 .084-.026c.462-.62.874-1.275 1.226-1.963.021-.04.001-.088-.041-.104a13.201 13.201 0 0 1-1.872-.878.075.075 0 0 1-.008-.125c.126-.093.252-.19.372-.287a.075.075 0 0 1 .078-.01c3.927 1.764 8.18 1.764 12.061 0a.075.075 0 0 1 .079.009c.12.098.245.195.372.288a.075.075 0 0 1-.006.125c-.598.344-1.22.635-1.873.877a.075.075 0 0 0-.041.105c.36.687.772 1.341 1.225 1.962a.077.077 0 0 0 .084.028 19.963 19.963 0 0 0 6.002-2.981.076.076 0 0 0 .032-.054c.5-5.094-.838-9.52-3.549-13.442a.06.06 0 0 0-.031-.028zM8.02 15.278c-1.182 0-2.157-1.069-2.157-2.38 0-1.312.956-2.38 2.157-2.38 1.21 0 2.176 1.077 2.157 2.38 0 1.312-.956 2.38-2.157 2.38zm7.975 0c-1.183 0-2.157-1.069-2.157-2.38 0-1.312.955-2.38 2.157-2.38 1.21 0 2.176 1.077 2.157 2.38 0 1.312-.946 2.38-2.157 2.38z"/>
                            </svg>
                        </a>
                        <a href="https://github.com/OvernodeProjets" class="text-white/70 hover:text-white transition">
                            <span class="sr-only">GitHub</span>
                            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
                            </svg>
                        </a>
                    </div>
                </div>
                <div class="mt-16 grid grid-cols-2 gap-8 xl:col-span-2 xl:mt-0">
                    <div class="md:grid md:grid-cols-2 md:gap-8">
                        <div>
                            <h3 class="text-sm font-semibold leading-6 text-white">Product</h3>
                            <ul role="list" class="mt-6 space-y-4">
                                <li>
                                    <a href="#features" class="text-sm leading-6 text-gray-300 hover:text-white">Features</a>
                                </li>
                                <li>
                                    <a href="#pricing" class="text-sm leading-6 text-gray-300 hover:text-white">Pricing</a>
                                </li>
                                <li>
                                    <a href="<%= settings.website.status %>" class="text-sm leading-6 text-gray-300 hover:text-white">Status</a>
                                </li>
                            </ul>
                        </div>
                        <div class="mt-10 md:mt-0">
                            <h3 class="text-sm font-semibold leading-6 text-white">Support</h3>
                            <ul role="list" class="mt-6 space-y-4">
                                <li>
                                    <a href="<%= settings.website.discord %>" class="text-sm leading-6 text-gray-300 hover:text-white">Discord</a>
                                </li>
                                <li>
                                    <a href="mailto:support@<%= settings.website.domain %>" class="text-sm leading-6 text-gray-300 hover:text-white">Contact</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-16 border-t border-gray-900/10 pt-8 sm:mt-20 lg:mt-24">
                <p class="text-xs leading-5 text-white/80">&copy; <%= new Date().getFullYear() %> <%= settings.name %>, Powered by Heliactyl. All rights reserved.</p>
            </div>
        </div>
    </footer>
</body>
</html>