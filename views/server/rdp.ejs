<!-- MacOS Installation Guide Section -->
<div id="macos-guide" class="hidden mt-8">
    <div class="bg-white/5 rounded-xl p-6 shadow-lg">
        <h3 class="text-xl font-semibold heavy text-white mb-4">macOS Installation Guide</h3>
        <div class="space-y-3 text-gray-300">
            <div class="flex items-start">
                <div class="flex-shrink-0 h-6 w-6 text-indigo-400">1.</div>
                <p class="ml-3">Start the server and open the VNC to view the screen.</p>
            </div>
            <div class="flex items-start">
                <div class="flex-shrink-0 h-6 w-6 text-indigo-400">2.</div>
                <p class="ml-3">Choose <code class="bg-white/5 px-2 py-1 rounded">Disk Utility</code> and then select the largest <code class="bg-white/5 px-2 py-1 rounded">Apple Inc. VirtIO Block Media</code> disk.</p>
            </div>
            <div class="flex items-start">
                <div class="flex-shrink-0 h-6 w-6 text-indigo-400">3.</div>
                <p class="ml-3">Click the <code class="bg-white/5 px-2 py-1 rounded">Erase</code> button to format the disk, and give it any recognizable name you like.</p>
            </div>
            <div class="flex items-start">
                <div class="flex-shrink-0 h-6 w-6 text-indigo-400">4.</div>
                <p class="ml-3">Close the current window and proceed the installation by clicking <code class="bg-white/5 px-2 py-1 rounded">Reinstall macOS</code>.</p>
            </div>
            <div class="flex items-start">
                <div class="flex-shrink-0 h-6 w-6 text-indigo-400">5.</div>
                <p class="ml-3">When prompted where you want to install it, select the disk you just created previously.</p>
            </div>
            <div class="flex items-start">
                <div class="flex-shrink-0 h-6 w-6 text-indigo-400">6.</div>
                <p class="ml-3">After all files are copied, select your region, language, and account settings.</p>
            </div>
            <div class="flex items-start">
                <div class="flex-shrink-0 h-6 w-6 text-indigo-400">7.</div>
                <p class="ml-3">Done! Your macOS machine will now be ready.</p>
            </div>
        </div>
    </div>
</div>

<script>
const serverId = new URLSearchParams(window.location.search).get('id');

// Node mapping object
const nodeMapping = {
    'FR-01-R': 'fr-01.frac.gg',
    'US-13-R': 'us-13.fractal.limited'
};

// Function to get hostname from node identifier
function getHostnameFromNode(nodeIdentifier) {
    return nodeMapping[nodeIdentifier] || 'fr-01.frac.gg'; // Default fallback
}

// Load server details
fetch(`/api/server/${serverId}`)
    .then(response => response.json())
    .then(data => {
        document.getElementById('server-name').textContent = data.attributes.name;
        document.getElementById('server-name-breadcrumb').textContent = data.attributes.name;
        document.getElementById('server-description').textContent = data.attributes.description || "No description set.";

        // Show macOS guide if server name contains 'macos'
        if (data.attributes.name.toLowerCase().includes('macos')) {
            document.getElementById('macos-guide').classList.remove('hidden');
        }

        // Find the default allocation
        const defaultAllocation = data.attributes.relationships.allocations.data.find(
            allocation => allocation.attributes.is_default
        );
        
        if (defaultAllocation) {
            const port = defaultAllocation.attributes.port;
            const nodeIdentifier = data.attributes.node; // Get the node identifier from server data
            const hostname = getHostnameFromNode(nodeIdentifier);
            const vncButton = document.getElementById('open-vnc');
            
            vncButton.addEventListener('click', () => {
                const proxyUrl = `http://${hostname}:${port}`;
                window.open(proxyUrl, '_blank', 'noopener,noreferrer');
            });
        }
    })
    .catch(error => {
        console.error('Error loading server details:', error);
    });
</script>

